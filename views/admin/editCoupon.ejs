<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChronoX - Edit Coupon</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --secondary: #111827;
            --success: #10b981;
            --error: #ef4444;
            --warning: #f59e0b;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --white: #ffffff;
            --black: #000000;
            --text-primary: #000000;
            --text-secondary: #374151;
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --border-radius: 0.5rem;
            --border-radius-lg: 0.75rem;
            --border-radius-xl: 1rem;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--white);
            color: var(--text-primary);
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Container */
        .container {
            display: flex;
            min-height: 100vh;
            position: relative;
            background-color: var(--white);
        }

        /* Mobile Menu Toggle */
        .menu-toggle {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1001;
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            width: 2.5rem;
            height: 2.5rem;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            color: var(--text-primary);
        }

        .menu-toggle:hover {
            background: var(--gray-50);
            transform: scale(1.05);
        }

        /* Sidebar Overlay */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .sidebar-overlay.active {
            display: block;
            opacity: 1;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--white);
            border-right: 1px solid var(--gray-200);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            box-shadow: var(--shadow-lg);
        }

        /* Sidebar Header */
        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            background: var(--white);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-primary);
        }

        .logo-icon {
            width: 2rem;
            height: 2rem;
            background: var(--primary);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.875rem;
            color: var(--white);
        }

        .logo-text {
            font-size: 1.25rem;
            font-weight: 700;
            letter-spacing: -0.025em;
            color: var(--text-primary);
        }

        /* Navigation */
        .nav-items {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
            background: var(--white);
        }

        .nav-group-label {
            padding: 0.5rem 1.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            color: var(--text-secondary);
            text-decoration: none;
            transition: var(--transition);
            margin: 0.125rem 0.75rem;
            border-radius: var(--border-radius);
            font-size: 0.875rem;
            font-weight: 500;
            position: relative;
        }

        .nav-item:hover {
            background: var(--gray-100);
            color: var(--text-primary);
            transform: translateX(0.125rem);
        }

        .nav-item.active {
            background: var(--primary);
            color: var(--white);
            box-shadow: var(--shadow-md);
        }

        .nav-item i {
            margin-right: 0.75rem;
            width: 1.25rem;
            text-align: center;
            font-size: 1rem;
        }

        /* Sidebar Footer */
        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--gray-200);
            background: var(--white);
        }

        .footer-btn {
            display: block;
            width: 100%;
            padding: 0.75rem;
            margin-bottom: 0.5rem;
            border-radius: var(--border-radius);
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 500;
            font-size: 0.875rem;
            border: none;
            text-decoration: none;
        }

        .account-btn {
            background: var(--white);
            color: var(--text-primary);
            border: 1px solid var(--gray-200);
        }

        .account-btn:hover {
            background: var(--gray-50);
            transform: translateY(-0.125rem);
        }

        .logout-btn {
            background: var(--secondary);
            color: var(--white);
        }

        .logout-btn:hover {
            background: var(--black);
            transform: translateY(-0.125rem);
        }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            flex: 1;
            transition: var(--transition);
            min-height: 100vh;
            background: var(--white);
        }

        /* Header */
        .header {
            background: var(--white);
            border-bottom: 1px solid var(--gray-200);
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--white);
            color: var(--text-primary);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: var(--transition);
        }

        .back-btn:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
            transform: translateY(-0.125rem);
        }

        /* Content Area */
        .content {
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            background: var(--white);
        }

        .content-header {
            margin-bottom: 2rem;
        }

        .content-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .content-description {
            color: var(--text-secondary);
            font-size: 1rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            background: var(--gray-100);
            color: var(--text-primary);
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        /* Form Container */
        .form-container {
            display: grid;
            gap: 2rem;
            max-width: 800px;
        }

        /* Card */
        .card {
            background: var(--white);
            border-radius: var(--border-radius-xl);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-200);
            overflow: hidden;
            transition: var(--transition);
            width: 140%;
        }

        .card:hover {
            box-shadow: var(--shadow-xl);
            transform: translateY(-0.125rem);
        }

        .card-header {
            padding: 2rem 2rem 1rem;
            border-bottom: 1px solid var(--gray-100);
            background: var(--white);
        }

        .card-title {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .card-icon {
            width: 2rem;
            height: 2rem;
            background: var(--primary);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
        }

        .card-description {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .card-content {
            padding: 2rem;
            background: var(--white);
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-primary);
            font-size: 0.875rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid var(--gray-200);
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
            background: var(--white);
            color: var(--text-primary);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            transform: translateY(-0.0625rem);
        }

        .form-input.error {
            border-color: var(--error);
            box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
        }

        .error-message {
            color: var(--error);
            font-size: 0.875rem;
            margin-top: 0.375rem;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius);
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: var(--primary);
            color: var(--white);
            box-shadow: var(--shadow-md);
        }

        .btn-primary:hover:not(:disabled) {
            background: var(--primary-dark);
            transform: translateY(-0.125rem);
            box-shadow: var(--shadow-lg);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-secondary {
            background: var(--white);
            color: var(--text-primary);
            border: 1px solid var(--gray-300);
        }

        .btn-secondary:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

        .btn-black {
            background: var(--secondary);
            color: var(--white);
            box-shadow: var(--shadow-md);
        }

        .btn-black:hover:not(:disabled) {
            background: var(--black);
            transform: translateY(-0.125rem);
            box-shadow: var(--shadow-lg);
        }

        .btn-group {
            display: flex;
            gap: 0.75rem;
            margin-top: 2rem;
        }

        .btn-full {
            flex: 1;
        }

        /* Loading Spinner */
        .spinner {
            width: 1rem;
            height: 1rem;
            border: 2px solid transparent;
            border-top: 2px solid currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Preview Card */
        .preview-card {
            border: 2px dashed var(--primary);
            background: var(--white);
            width: 140%;
        }

        .preview-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--gray-100);
        }

        .preview-item:last-child {
            border-bottom: none;
        }

        .preview-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .preview-value {
            font-weight: 600;
            color: var(--text-primary);
        }

        .preview-value.discount {
            color: var(--success);
        }

        .preview-value.expiry {
            color: var(--error);
        }

        .coupon-code {
            background: var(--gray-100);
            color: var(--text-primary);
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-family: 'Courier New', monospace;
            font-size: 0.875rem;
        }

        /* Toast */
        .toast {
            position: fixed;
            top: 1rem;
            right: 1rem;
            padding: 1rem 1.5rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-xl);
            z-index: 10000;
            color: var(--white);
            font-weight: 500;
            transform: translateX(100%);
            transition: transform 0.3s ease;
            max-width: 400px;
        }

        .toast.show {
            transform: translateX(0);
        }

        .toast.success {
            background: var(--success);
        }

        .toast.error {
            background: var(--error);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sidebar {
                width: var(--sidebar-collapsed);
            }

            .main-content {
                margin-left: var(--sidebar-collapsed);
            }

            .nav-item span {
                display: none;
            }

            .nav-item {
                justify-content: center;
                padding: 0.75rem;
            }

            .nav-item i {
                margin-right: 0;
            }

            .logo-text {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .menu-toggle {
                display: flex;
            }

            .sidebar {
                transform: translateX(-100%);
                width: var(--sidebar-width);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding-top: 4rem;
            }

            .header {
                padding: 1rem;
            }

            .content {
                padding: 1rem;
            }

            .card-header,
            .card-content {
                padding: 1.5rem;
            }

            .btn-group {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .content {
                padding: 0.75rem;
            }

            .card-header,
            .card-content {
                padding: 1rem;
            }

            .content-title {
                font-size: 1.5rem;
            }

            .form-input {
                font-size: 16px; /* Prevents zoom on iOS */
            }
        }

        /* Focus styles */
        .menu-toggle:focus,
        .nav-item:focus,
        .form-input:focus,
        .btn:focus {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

          .error-message {
            color: red;
            font-size: 0.85rem;
            margin-top: 4px;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
            }
            .error-message.show {
            display: block;
            opacity: 1;
            }
            .form-input.error {
            border: 1px solid red;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Mobile Menu Toggle -->
        <button class="menu-toggle" id="menuToggle" aria-label="Toggle navigation menu">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <span class="logo-text" style="margin-left: 40px">ChronoX</span>
                </div>
            </div>

            <div class="nav-items">
                <div class="nav-group-label">Navigation</div>
                <a href="/admin/dashboard" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/product" class="nav-item">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
                <a href="/admin/orderlist" class="nav-item">
                    <i class="fas fa-list"></i>
                    <span>Order List</span>
                </a>
                <a href="/admin/userlist" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Customer</span>
                </a>
                <a href="/admin/returns" class="nav-item">
                    <i class="fas fa-undo">
                    </i><span>Returns</span>
                </a>
                <a href="/admin/sales-report" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Sales</span>
                </a>
                <a href="/admin/category" class="nav-item">
                    <i class="fas fa-tags"></i>
                    <span>Category</span>
                </a>
                <a href="/admin/coupon" class="nav-item active">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>
                <a href="/admin/category-offers" class="nav-item">
                    <i class="fas fa-percent"></i>
                    <span>Category Offers</span>
                </a>
                <a href="/admin/referrals" class="nav-item">
                <i class="fas fa-users"></i>
                <span>Referrals</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <button class="footer-btn account-btn">
                    <i class="fas fa-user"></i> Account
                </button>
                <button class="footer-btn logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <div class="header-left">
                    <h1 class="page-title">Edit Coupon</h1>
                </div>
                <a href="/admin/coupon" class="back-btn">
                    <i class="fas fa-arrow-left"></i>
                    <span>Back to Coupons</span>
                </a>
            </div>

            <!-- Content -->
            <div class="content">
                <div class="content-header">
                    <h2 class="content-title">Edit Coupon</h2>
                    <p class="content-description">Update the coupon details below</p>
                    <div class="status-badge">
                        <i class="fas fa-ticket-alt"></i>
                        Active Coupon
                    </div>
                </div>

                <div class="form-container">
                    <!-- Main Form Card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <div class="card-icon">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                Update Coupon Details
                            </h3>
                            <p class="card-description">Modify the coupon information and save your changes</p>
                        </div>
                        <div class="card-content">
                            <form id="couponForm" novalidate>
                                <input type="hidden" id="couponId" value="sample-coupon-id">
                                
                                <div class="form-group">
                                    <label class="form-label" for="couponName">
                                        <i class="fas fa-ticket-alt"></i>
                                        Coupon Name *
                                    </label>
                                    <input type="text" id="couponName" class="form-input" 
                                           placeholder="Enter coupon name" value="<%= coupon.name %>">
                                    <div id="couponNameError" class="error-message"></div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="discount">
                                        <i class="fas fa-percentage"></i>
                                        Discount (%) *
                                    </label>
                                    <input type="number" id="discount" class="form-input" 
                                           placeholder="Enter discount percentage" value="<%= coupon.discount %>" 
                                           min="1" max="100">
                                    <div id="discountError" class="error-message"></div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="expiryDate">
                                        <i class="fas fa-calendar-alt"></i>
                                        Expiry Date *
                                    </label>
                                    <input type="date" id="expiryDate" class="form-input" value="<%= coupon.expiryDate.toISOString().split('T')[0] %>">
                                    <div id="expiryDateError" class="error-message"></div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="minPurchase">
                                        <i class="fas fa-rupee-sign"></i>
                                        Minimum Purchase (₹) *
                                    </label>
                                    <input type="number" id="minPurchase" class="form-input" 
                                           placeholder="Enter minimum purchase amount" value="<%= coupon.minPurchase %>" min="0">
                                    <div id="minPurchaseError" class="error-message"></div>
                                </div>

                                <div class="btn-group">
                                    <input type="hidden" id="couponid" value='<%= coupon._id %>'>
                                    <button type="submit" class="btn btn-primary btn-full" id="submitBtn">
                                        <i class="fas fa-save"></i>
                                        Update Coupon
                                    </button>
                                    <button type="button" class="btn btn-secondary" onclick="editCoupon('<%= coupon._id %>')">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    Preview Card
                    <div class="card preview-card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <div class="card-icon">
                                    <i class="fas fa-eye"></i>
                                </div>
                                Coupon Preview
                            </h3>
                        </div>
                        <div class="card-content">
                            <div class="preview-item">
                                <span class="preview-label">Code:</span>
                                <span class="preview-value coupon-code" id="previewCode" ></span>
                            </div>
                            <div class="preview-item">
                                <span class="preview-label">Discount:</span>
                                <span class="preview-value discount" id="previewDiscount"></span>
                            </div>
                            <div class="preview-item">
                                <span class="preview-label">Min. Purchase:</span>
                                <span class="preview-value" id="previewMinPurchase"></span>
                            </div>
                            <div class="preview-item">
                                <span class="preview-label">Expires:</span>
                                <span class="preview-value expiry" id="previewExpiry"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast"></div>

<script>
    const form = document.getElementById('couponForm');
const couponNameInput = document.getElementById('couponName');
const discountInput = document.getElementById('discount');
const expiryDateInput = document.getElementById('expiryDate');
const minPurchaseInput = document.getElementById('minPurchase');
const submitBtn = document.getElementById('submitBtn');

const previewCode = document.getElementById('previewCode');
const previewDiscount = document.getElementById('previewDiscount');
const previewMinPurchase = document.getElementById('previewMinPurchase');
const previewExpiry = document.getElementById('previewExpiry');




// Set expiry date minimum to today
expiryDateInput.setAttribute('min', new Date().toISOString().split('T')[0]);

// Toast function
function showToast(msg, type = 'success') {
  const toast = document.getElementById('toast');
  toast.textContent = msg;
  toast.className = `toast ${type} show`;
  setTimeout(() => toast.classList.remove('show'), 3000);
}

// Show error under input
function showError(id, msg) {
  const el = document.getElementById(id + 'Error');
  const input = document.getElementById(id);
  el.textContent = msg;
  el.classList.add('show');
  input.classList.add('error');
}

// Remove error under input
function clearError(id) {
  const el = document.getElementById(id + 'Error');
  const input = document.getElementById(id);
  el.classList.remove('show');
  input.classList.remove('error');
}

// Validate form fields
function validateForm() {
  let valid = true;
  ['couponName', 'discount', 'expiryDate', 'minPurchase'].forEach(clearError);

  const name = couponNameInput.value.trim();
  if (!name) {
    showError('couponName', 'This field is required');
    valid = false;
  } else if (!/^[A-Za-z][A-Za-z0-9\s-]{2,49}$/.test(name)) {
    showError('couponName', 'Start with letter, 3–50 characters allowed');
    valid = false;
  }

  const discount = parseFloat(discountInput.value);
  if (!discountInput.value) {
    showError('discount', 'This field is required');
    valid = false;
  } else if (isNaN(discount) || discount <= 0 || discount > 80) {
    showError('discount', 'Discount must be between 1 and 80');
    valid = false;
  }

  const expiry = new Date(expiryDateInput.value);
  const today = new Date(); today.setHours(0, 0, 0, 0);
  if (!expiryDateInput.value) {
    showError('expiryDate', 'This field is required');
    valid = false;
  } else if (expiry < today) {
    showError('expiryDate', 'Expiry must be a future date');
    valid = false;
  }

  const min = parseFloat(minPurchaseInput.value);
  if (minPurchaseInput.value === '') {
    showError('minPurchase', 'This field is required');
    valid = false;
  } else if (isNaN(min) || min < 0) {
    showError('minPurchase', 'Minimum must be 0 or more');
    valid = false;
  }

  return valid;
}

// Update preview in real time
function updatePreview() {
  previewCode.textContent = couponNameInput.value || 'COUPON_NAME';
  previewDiscount.textContent = (discountInput.value || '0') + '% OFF';
  previewMinPurchase.textContent = '₹' + (minPurchaseInput.value || '0');
  previewExpiry.textContent = expiryDateInput.value || 'Not set';
}

// Attach real-time validation & preview
[couponNameInput, discountInput, expiryDateInput, minPurchaseInput].forEach(input => {
  input.addEventListener('input', () => {
    clearError(input.id);
    validateForm();
    updatePreview();
  });
});


const originalValues = {
  name: couponNameInput.value.trim(),
  discount: parseFloat(discountInput.value),
  expiryDate: expiryDateInput.value,
  minPurchase: parseFloat(minPurchaseInput.value)
};

// Submit handler
form.addEventListener('submit', async (e) => {
  e.preventDefault();
  if (!validateForm()) return;

      // Check if values changed
  const currentValues = {
    name: couponNameInput.value.trim(),
    discount: parseFloat(discountInput.value),
    expiryDate: expiryDateInput.value,
    minPurchase: parseFloat(minPurchaseInput.value)
  };

  const noChanges = Object.keys(originalValues).every(
    key => originalValues[key] === currentValues[key]
  );

  if (noChanges) {
    showToast('No changes made.', 'info');
    return; // Stop submission
  }

  submitBtn.disabled = true;
  submitBtn.textContent = 'Updating...';

  try {
    const res = await fetch(`/admin/coupon/edit/${document.getElementById('couponId').value}`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        name: couponNameInput.value.trim(),
        discount: parseFloat(discountInput.value),
        expiryDate: expiryDateInput.value,
        minPurchase: parseFloat(minPurchaseInput.value)
      })
    });

    const data = await res.json();
    if (data.success) {
      showToast(data.message || 'Coupon updated!');
      setTimeout(() => window.location.href = '/admin/coupon', 1500);
    } else {
      showToast(data.message || 'Update failed', 'error');
    }
  } catch (err) {
    console.error(err);
    showToast('Server error. Please try again.', 'error');
  } finally {
    submitBtn.disabled = false;
    submitBtn.innerHTML = '<i class="fas fa-save"></i> Update Coupon';
  }
});

// Initial preview
updatePreview();

</script>

</body>
