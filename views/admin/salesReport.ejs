<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sales Report</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    }

    :root {
        --primary-color: #3b82f6;
        --primary-light: #dbeafe;
        --text-color: #333;
        --text-secondary: #666;
        --border-color: #e5e7eb;
        --sidebar-width: 240px;
        --sidebar-collapsed: 80px;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
        --red: #ef4444;
        --green: #22c55e;
    }

    body {
        background-color: #f9fafb;
        color: var(--text-color);
        min-height: 100vh;
        overflow-x: hidden;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        position: relative;
    }

    /* Mobile Menu Toggle */
    .menu-toggle {
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 1001;
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 5px;
        width: 40px;
        height: 40px;
        display: none;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: var(--shadow-sm);
        font-size: 16px;
    }

    /* Sidebar Overlay for Mobile */
    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .sidebar-overlay.active {
        display: block;
        opacity: 1;
    }

    /* Sidebar Styles */
    .sidebar {
        width: var(--sidebar-width);
        background-color: white;
        border-right: 1px solid var(--border-color);
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
        flex-shrink: 0;
    }

    .logo {
        font-size: 24px;
        font-weight: 600;
        color: var(--text-color);
        text-align: center;
    }

    .nav-items {
        flex: 1;
        padding: 20px 0;
        overflow-y: auto;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: var(--text-secondary);
        text-decoration: none;
        transition: var(--transition);
        margin-bottom: 5px;
        cursor: pointer;
        font-size: 14px;
    }

    .nav-item:hover, .nav-item.active {
        background-color: var(--primary-light);
        color: var(--primary-color);
        border-left: 3px solid var(--primary-color);
    }

    .nav-item i {
        margin-right: 12px;
        width: 20px;
        text-align: center;
        font-size: 18px;
    }

    .sidebar-footer {
        padding: 20px;
        border-top: 1px solid var(--border-color);
        flex-shrink: 0;
    }

    .account-btn, .logout-btn {
        display: block;
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        text-align: center;
        cursor: pointer;
        transition: var(--transition);
        font-weight: 500;
        font-size: 14px;
    }

    .account-btn {
        background-color: white;
        color: var(--text-color);
        border: 1px solid var(--border-color);
    }

    .account-btn:hover {
        background-color: #f3f4f6;
    }

    .logout-btn {
        background-color: #111827;
        color: white;
        border: none;
    }

    .logout-btn:hover {
        background-color: #000;
    }

    /* Main Content */
    .main-content {
        margin-left: var(--sidebar-width);
        padding: 30px;
        background-color: #f9fafb;
        min-height: 100vh;
        transition: var(--transition);
        width: calc(100% - var(--sidebar-width));
        min-width: 0;
    }

    /* Page Title */
    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 30px;
    }

    /* Filter Section */
    .filter-section {
        background-color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        margin-bottom: 25px;
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        min-width: 0;
    }

    .filter-group label {
        font-weight: 500;
        margin-bottom: 5px;
        color: var(--text-color);
        font-size: 14px;
    }

    .filter-group select,
    .filter-group input {
        padding: 10px;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        font-size: 14px;
        transition: var(--transition);
        width: 100%;
    }

    .filter-group select:focus,
    .filter-group input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .filter-btn, .export-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 500;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 14px;
        white-space: nowrap;
        width: 100%;
        min-height: 44px;
    }

    .filter-btn {
        background-color: var(--primary-color);
        color: white;
    }

    .filter-btn:hover {
        background-color: #2563eb;
    }

    .export-btn {
        color: white;
    }

    .export-btn.pdf-btn {
        background-color: #dc2626;
    }

    .export-btn.pdf-btn:hover {
        background-color: #b91c1c;
    }

    .export-btn.excel-btn {
        background-color: #16a34a;
    }

    .export-btn.excel-btn:hover {
        background-color: #15803d;
    }

    .export-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* Sales Table */
    .sales-table {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        margin-bottom: 30px;
        overflow-x: auto;
    }

    .sales-table table {
        width: 100%;
        border-collapse: collapse;
        min-width: 800px;
    }

    .sales-table th {
        background-color: #111827;
        color: white;
        text-align: left;
        padding: 15px;
        font-weight: 500;
        font-size: 14px;
        white-space: nowrap;
    }

    .sales-table td {
        padding: 15px;
        border-bottom: 1px solid var(--border-color);
        font-size: 14px;
        vertical-align: middle;
        white-space: nowrap;
    }

    .sales-table tr:last-child td {
        border-bottom: none;
    }

    .sales-table tbody tr {
        transition: var(--transition);
    }

    .sales-table tbody tr:hover {
        background-color: #f9fafb;
    }

    /* Summary Table */
    .summary-table {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        margin-top: 30px;
        overflow-x: auto;
    }

    .summary-table table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px;
    }

    .summary-table th {
        background-color: #111827;
        color: white;
        text-align: center;
        padding: 15px;
        font-weight: 500;
        font-size: 14px;
        white-space: nowrap;
    }

    .summary-table td {
        padding: 20px 15px;
        text-align: center;
        font-size: 16px;
        font-weight: 600;
        color: var(--text-color);
        border-bottom: none;
    }

    .summary-table .net-total {
        background-color: var(--primary-light);
        color: var(--primary-color);
        font-size: 18px;
        font-weight: 700;
    }

    /* Table Header with Page Info */
    .table-header {
        padding: 15px 20px;
        background-color: #f8f9fa;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .page-info {
        font-size: 14px;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* Pagination Styles */
    .pagination-container {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        flex-wrap: wrap;
        justify-content: center;
    }

    .page-btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 15px;
        border: 1px solid var(--border-color);
        background-color: white;
        color: var(--text-color);
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        transition: var(--transition);
        cursor: pointer;
        min-width: 44px;
        justify-content: center;
        white-space: nowrap;
        min-height: 44px;
    }

    .page-btn:hover:not(:disabled) {
        background-color: var(--primary-light);
        color: var(--primary-color);
        border-color: var(--primary-color);
        text-decoration: none;
    }

    .page-btn.active {
        background-color: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }

    .page-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background-color: #f8f9fa;
        color: #6c757d;
    }

    .prev-btn, .next-btn {
        padding: 10px 20px;
        font-weight: 600;
    }

    .page-numbers {
        display: flex;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .page-dots {
        padding: 10px 5px;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* Responsive Design */

    /* Large Desktop */
    @media (min-width: 1400px) {
        .filter-row {
            grid-template-columns: repeat(6, 1fr);
        }
        
        .main-content {
            padding: 40px;
        }
    }

    /* Desktop */
    @media (max-width: 1200px) {
        .filter-row {
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        }
    }

    /* Tablet Landscape */
    @media (max-width: 1024px) {
        .main-content {
            margin-left: var(--sidebar-collapsed);
        }
        
        .sidebar {
            width: var(--sidebar-collapsed);
        }
        
        .sidebar .nav-item span {
            display: none;
        }
        
        .nav-item {
            justify-content: center;
            padding: 15px;
        }
        
        .nav-item i {
            margin-right: 0;
        }
        
        .filter-row {
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        }
        
        .sales-table table {
            min-width: 700px;
        }
        
        .summary-table table {
            min-width: 500px;
        }
    }

    /* Tablet Portrait and Mobile */
    @media (max-width: 768px) {
        .menu-toggle {
            display: flex;
        }
        
        .sidebar {
            transform: translateX(-100%);
            width: var(--sidebar-width);
        }
        
        .sidebar.active {
            transform: translateX(0);
        }
        
        .main-content {
            margin-left: 0;
            padding: 20px 15px;
            width: 100%;
            padding-top: 70px;
        }
        
        .page-title {
            font-size: 24px;
            margin-bottom: 20px;
        }
        
        .filter-section {
            padding: 15px;
        }
        
        .filter-row {
            grid-template-columns: 1fr;
            gap: 15px;
        }
        
        .filter-group {
            min-width: 100%;
        }
        
        .filter-btn, .export-btn {
            padding: 12px 20px;
            font-size: 14px;
        }
        
        .sales-table {
            margin-bottom: 20px;
        }
        
        .sales-table table {
            min-width: 600px;
        }
        
        .sales-table th,
        .sales-table td {
            padding: 10px 8px;
            font-size: 13px;
        }
        
        .summary-table table {
            min-width: 450px;
        }

        .summary-table th,
        .summary-table td {
            padding: 15px 10px;
            font-size: 14px;
        }
        
        .table-header {
            padding: 12px 15px;
            flex-direction: column;
            gap: 8px;
            text-align: center;
        }
        
        .pagination {
            flex-wrap: wrap;
            gap: 8px;
            padding: 15px;
        }

        .page-btn {
            padding: 8px 12px;
            font-size: 13px;
            min-width: 36px;
            min-height: 36px;
        }

        .prev-btn, .next-btn {
            padding: 8px 15px;
        }

        .page-numbers {
            gap: 3px;
        }
    }

    /* Mobile Portrait */
    @media (max-width: 480px) {
        .main-content {
            padding: 15px 10px;
            padding-top: 60px;
        }
        
        .menu-toggle {
            top: 10px;
            left: 10px;
            width: 36px;
            height: 36px;
            font-size: 14px;
        }
        
        .page-title {
            font-size: 20px;
            margin-bottom: 15px;
        }
        
        .filter-section {
            padding: 12px;
        }
        
        .filter-btn, .export-btn {
            padding: 10px 15px;
            font-size: 13px;
        }
        
        .sales-table th,
        .sales-table td {
            padding: 8px 6px;
            font-size: 12px;
        }
        
        .sales-table table {
            min-width: 500px;
        }
        
        .summary-table th,
        .summary-table td {
            padding: 12px 8px;
            font-size: 13px;
        }

        .summary-table .net-total {
            font-size: 15px;
        }
        
        .summary-table table {
            min-width: 380px;
        }
        
        .pagination {
            padding: 12px;
            gap: 5px;
        }

        .page-btn {
            padding: 6px 10px;
            font-size: 12px;
            min-width: 32px;
            min-height: 32px;
        }

        .prev-btn, .next-btn {
            padding: 6px 12px;
        }

        /* Hide some page numbers on very small screens */
        .page-numbers .page-btn:not(.active):nth-child(n+5) {
            display: none;
        }
    }

    /* Extra Small Mobile */
    @media (max-width: 360px) {
        .main-content {
            padding: 10px 8px;
            padding-top: 55px;
        }
        
        .menu-toggle {
            width: 32px;
            height: 32px;
            font-size: 13px;
        }
        
        .filter-section {
            padding: 10px;
        }
        
        .sales-table table {
            min-width: 450px;
        }
        
        .summary-table table {
            min-width: 340px;
        }
        
        .page-btn {
            padding: 5px 8px;
            font-size: 11px;
            min-width: 28px;
            min-height: 28px;
        }
        
        .prev-btn, .next-btn {
            padding: 5px 10px;
        }
        
        .page-numbers .page-btn:not(.active):nth-child(n+4) {
            display: none;
        }
    }

    /* Landscape orientation for mobile */
    @media (max-height: 500px) and (orientation: landscape) and (max-width: 768px) {
        .main-content {
            padding-top: 50px;
        }
        
        .menu-toggle {
            top: 8px;
            left: 8px;
            width: 32px;
            height: 32px;
        }
        
        .sidebar-header {
            padding: 15px;
        }
        
        .nav-items {
            padding: 15px 0;
        }
        
        .nav-item {
            padding: 10px 20px;
        }
        
        .sidebar-footer {
            padding: 15px;
        }
        
        .page-title {
            margin-bottom: 15px;
        }
        
        .filter-section {
            margin-bottom: 15px;
        }
    }

    /* Print styles */
    @media print {
        .sidebar,
        .menu-toggle,
        .sidebar-overlay,
        .filter-section,
        .pagination-container {
            display: none !important;
        }
        
        .main-content {
            margin-left: 0 !important;
            padding: 0 !important;
            width: 100% !important;
        }
        
        .sales-table,
        .summary-table {
            box-shadow: none;
            border: 1px solid #000;
        }
        
        .sales-table table,
        .summary-table table {
            min-width: auto;
        }
    }

    /* Focus styles for accessibility */
    .nav-item:focus,
    .page-btn:focus,
    .filter-group select:focus,
    .filter-group input:focus,
    .filter-btn:focus,
    .export-btn:focus,
    .menu-toggle:focus {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }

    /* Hover effects */
    .nav-item i {
        transition: transform 0.3s ease;
    }
    
    .nav-item:hover i {
        transform: scale(1.1);
    }
    
    .page-btn:hover {
        transform: translateY(-1px);
    }
    
    .menu-toggle:hover {
        background-color: #f3f4f6;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Mobile Menu Toggle -->
    <button class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <span class="logo-text">Chrono</span>X
        </div>
      </div>

      <div class="nav-items">
        <a href="/admin/dashboard" class="nav-item"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
        <a href="/admin/product" class="nav-item"><i class="fas fa-box"></i> <span>Products</span></a>
        <a href="/admin/orders" class="nav-item"><i class="fas fa-list"></i> <span>Order List</span></a>
        <a href="/admin/userlist" class="nav-item"><i class="fas fa-user"></i> <span>Customer</span></a>
        <a href="/admin/sales-report" class="nav-item active"><i class="fas fa-chart-line"></i> <span>Sales Report</span></a>
        <a href="/admin/category" class="nav-item"><i class="fas fa-tags"></i> <span>Category</span></a>
        <a href="/admin/category-offers" class="nav-item"><i class="fas fa-percent"></i> <span>Category Offers</span></a>
        <a href="/admin/coupon" class="nav-item"><i class="fas fa-ticket-alt"></i> <span>Coupons</span></a>
        <a href="/admin/referrals" class="nav-item"><i class="fas fa-users"></i><span>Referrals</span></a>
      </div>

      <div class="sidebar-footer">
        <button class="account-btn">Account</button>
        <a href="/admin/logout" style="text-decoration: none;"><button class="logout-btn">Logout</button></a>
      </div>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <h1 class="page-title">SALES REPORT</h1>
        
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-row">
                <div class="filter-group">
                    <label>Report Type:</label>
                    <select id="reportType">
                        <option value="daily" <%= type === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= type === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= type === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%= type === 'custom' ? 'selected' : '' %>>Custom Date Range</option>
                    </select>
                </div>
                
                <div class="filter-group" id="customDateGroup" style="display: none;">
                    <label>From Date:</label>
                    <input type="date" id="fromDate" value="<%= fromDate %>">
                </div>
                
                <div class="filter-group" id="customDateGroup2" style="display: none;">
                    <label>To Date:</label>
                    <input type="date" id="toDate" value="<%= toDate %>">
                </div>
             
                <div class="filter-group">
                    <button class="filter-btn" onclick="generateReport()">
                        <i class="fas fa-search"></i> Generate Report
                    </button>
                </div>
                 
                <div class="filter-group">
                    <button class="export-btn pdf-btn" onclick="exportReportPDF()">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                </div>

                <div class="filter-group">
                    <button class="export-btn excel-btn" onclick="exportReportExcel()">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Sales Table -->
        <div class="sales-table">
            <!-- Page Info -->
            <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                <div class="table-header">
                    <div class="page-info">
                        Showing <%= startRecord %> - <%= endRecord %> of <%= totalOrders %> results
                    </div>
                </div>
            <% } %>

            <table>
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Price</th>
                        <!-- <th>Category Offer</th> -->
                        <th>Payment Method</th>
                         <th>Discount</th>
                        <!-- <th>Coupon</th> --> 
                        <th>Paid Amount</th>
                    </tr>
                </thead>
                <tbody id="salesTableBody">
                    <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                         <tr>
                            <td>#<%= order._id.toString().slice(-6).toUpperCase() %></td>
                            <td><%= order.user?.fullname || 'N/A' %></td>
                            <td><%= order.user?.email || 'N/A' %></td>
                            <td>₹<%= (order.totalAmount + (order.discount || 0)).toLocaleString('en-IN') %></td>
                            <!-- <td>₹<%= (order.categoryDiscount || 0).toLocaleString('en-IN') %></td> -->
                            <td><%= order.paymentMethod %></td>
                            <td>₹<%= (order.coupon.discountAmount || 0).toLocaleString('en-IN') %></td>
                            <!-- <td>₹<%= (order.couponDiscount || 0).toLocaleString('en-IN') %></td> -->
                            <td>₹<%= order.totalAmount.toLocaleString('en-IN') %></td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="9" style="text-align: center; padding: 40px; color: #666;">
                                No sales data found for the selected period
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <% if (typeof orders !== 'undefined' && orders.length > 0 && totalPages > 1) { %>
            <div class="pagination-container">
                <div class="pagination">
                    <!-- Previous Button -->
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>" class="page-btn prev-btn">
                            <i class="fas fa-chevron-left"></i>
                            <span>Previous</span>
                        </a>
                    <% } else { %>
                        <button class="page-btn prev-btn" disabled>
                            <i class="fas fa-chevron-left"></i>
                            <span>Previous</span>
                        </button>
                    <% } %>

                    <!-- Page Numbers -->
                    <div class="page-numbers">
                        <%
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);

                        // Adjust if we're near the beginning or end
                        if (currentPage <= 3) {
                            endPage = Math.min(5, totalPages);
                        }
                        if (currentPage > totalPages - 3) {
                            startPage = Math.max(1, totalPages - 4);
                        }
                        %>

                        <!-- First page if not in range -->
                        <% if (startPage > 1) { %>
                            <a href="?page=1&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>" class="page-btn">1</a>
                            <% if (startPage > 2) { %>
                                <span class="page-dots">...</span>
                            <% } %>
                        <% } %>

                        <!-- Page range -->
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="?page=<%= i %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>"
                               class="page-btn <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>

                        <!-- Last page if not in range -->
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="page-dots">...</span>
                            <% } %>
                            <a href="?page=<%= totalPages %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>" class="page-btn"><%= totalPages %></a>
                        <% } %>
                    </div>

                    <!-- Next Button -->
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>" class="page-btn next-btn">
                            <span>Next</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } else { %>
                        <button class="page-btn next-btn" disabled>
                            <span>Next</span>
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    <% } %>
                </div>
            </div>
        <% } %>
        
        <!-- Summary Table -->
        <div class="summary-table">
            <table>
                <thead>
                    <tr>
                        <th>Total Orders</th>
                        <th>Total Sales Amount</th>
                        <!-- <th>Total Discount</th>
                        <th>Total Coupon Discount</th> -->
                        <th>Net Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td id="totalOrders"><%= typeof summary !== 'undefined' ? summary.totalOrders : 0 %></td>
                        <td id="totalSales">₹<%= typeof summary !== 'undefined' ? summary.totalSales.toLocaleString('en-IN') : 0 %></td>
                         <!-- <td id="totalDiscount">₹<%= typeof summary !== 'undefined' ? summary.totalDiscount.toLocaleString('en-IN') : 0 %></td> -->
                        <!-- <td id="totalCouponDiscount">₹<%= typeof summary !== 'undefined' ? summary.totalCouponDiscount.toLocaleString('en-IN') : 0 %></td> -->
                        <td id="totalAmount" class="net-total">₹<%= typeof summary !== 'undefined' ? summary.totalAmount.toLocaleString('en-IN') : 0 %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
  </div>

<script>
  // Mobile Menu Toggle
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.getElementById('sidebar');
  const sidebarOverlay = document.getElementById('sidebarOverlay');

  function toggleSidebar() {
    sidebar.classList.toggle('active');
    sidebarOverlay.classList.toggle('active');
    
    // Prevent body scroll when sidebar is open
    if (sidebar.classList.contains('active')) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  }

  function closeSidebar() {
    sidebar.classList.remove('active');
    sidebarOverlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  menuToggle.addEventListener('click', toggleSidebar);
  sidebarOverlay.addEventListener('click', closeSidebar);

  // Close sidebar on window resize if screen becomes larger
  window.addEventListener('resize', function() {
    if (window.innerWidth > 768) {
      closeSidebar();
    }
  });

  // Prevent sidebar from closing when clicking inside it
  sidebar.addEventListener('click', function(e) {
    e.stopPropagation();
  });

  // Date field toggle functionality
  document.addEventListener('DOMContentLoaded', function () {
    const reportType = document.getElementById('reportType');
    const customDateGroup = document.getElementById('customDateGroup');
    const customDateGroup2 = document.getElementById('customDateGroup2');

    function toggleDateFields() {
      if (reportType.value === 'custom') {
        customDateGroup.style.display = 'block';
        customDateGroup2.style.display = 'block';
      } else {
        customDateGroup.style.display = 'none';
        customDateGroup2.style.display = 'none';
      }
    }

    reportType.addEventListener('change', toggleDateFields);
    toggleDateFields(); // initial check

    // Set default date range (last 7 days)
    const today = new Date();
    const oneWeekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
    document.getElementById('fromDate').value ||= oneWeekAgo.toISOString().split('T')[0];
    document.getElementById('toDate').value ||= today.toISOString().split('T')[0];
  });

  function generateReport() {
    const type = document.getElementById('reportType').value;
    const from = document.getElementById('fromDate').value;
    const to = document.getElementById('toDate').value;
    let url = `/admin/sales-report?type=${type}&page=1`; // Reset to page 1 when generating new report
    if (type === 'custom' && from && to) url += `&fromDate=${from}&toDate=${to}`;
    window.location.href = url;
  }

  function exportReportPDF() {
    exportHelper('pdf-btn', '/admin/sales-report/export-pdf');
  }

  function exportReportExcel() {
    exportHelper('excel-btn', '/admin/sales-report/export-excel');
  }

  function exportHelper(buttonClass, baseUrl) {
    const type = document.getElementById('reportType').value;
    const from = document.getElementById('fromDate').value;
    const to = document.getElementById('toDate').value;

    if (type === 'custom' && (!from || !to)) {
      alert('Please select both From and To dates for custom range');
      return;
    }

    // Export functions should export ALL data for the selected filters, not just current page
    let url = `${baseUrl}?type=${type}`;
    if (type === 'custom' && from && to) url += `&fromDate=${from}&toDate=${to}`;

    const btn = document.querySelector(`.${buttonClass}`);
    const original = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
    btn.disabled = true;

    setTimeout(() => {
      window.open(url, '_blank');
      btn.innerHTML = original;
      btn.disabled = false;
    }, 500);
  }
</script>

</body>
</html>