<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Professional Sales Report - ChronoX</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    }

    :root {
        --primary-color: #3b82f6;
        --primary-light: #dbeafe;
        --primary-dark: #1e40af;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --text-color: #1f2937;
        --text-secondary: #6b7280;
        --text-muted: #9ca3af;
        --border-color: #e5e7eb;
        --bg-color: #f9fafb;
        --white: #ffffff;
        --sidebar-width: 240px;
        --sidebar-collapsed: 80px;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
        --border-radius: 8px;
        --border-radius-lg: 12px;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-color);
        min-height: 100vh;
        overflow-x: hidden;
        line-height: 1.6;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        position: relative;
    }

    /* Mobile Menu Toggle */
    .menu-toggle {
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 1001;
        background-color: var(--white);
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        width: 40px;
        height: 40px;
        display: none;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: var(--shadow-sm);
        font-size: 16px;
        transition: var(--transition);
    }

    .menu-toggle:hover {
        background-color: var(--bg-color);
        box-shadow: var(--shadow-md);
    }

    /* Sidebar Overlay for Mobile */
    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .sidebar-overlay.active {
        display: block;
        opacity: 1;
    }

    /* Sidebar Styles */
    .sidebar {
        width: var(--sidebar-width);
        background-color: var(--white);
        border-right: 1px solid var(--border-color);
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        box-shadow: var(--shadow-sm);
    }

    .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
        flex-shrink: 0;
    }

    .logo {
        font-size: 24px;
        font-weight: 700;
        color: black;
        text-align: center;
        background: linear-gradient(135deg, black);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-items {
        flex: 1;
        padding: 20px 0;
        overflow-y: auto;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: var(--text-secondary);
        text-decoration: none;
        transition: var(--transition);
        margin-bottom: 2px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        border-radius: 0 25px 25px 0;
        margin-right: 10px;
    }

    .nav-item:hover, .nav-item.active {
        background-color: var(--primary-light);
        color: var(--primary-color);
        transform: translateX(5px);
    }

    .nav-item.active {
        background: linear-gradient(135deg, var(--primary-light), rgba(59, 130, 246, 0.1));
        border-left: 3px solid var(--primary-color);
        font-weight: 600;
    }

    .nav-item i {
        margin-right: 12px;
        width: 20px;
        text-align: center;
        font-size: 18px;
        transition: var(--transition);
    }

    .nav-item:hover i {
        transform: scale(1.1);
    }

    .sidebar-footer {
        padding: 20px;
        border-top: 1px solid var(--border-color);
        flex-shrink: 0;
    }

    .account-btn, .logout-btn {
        display: block;
        width: 100%;
        padding: 12px;
        margin-bottom: 10px;
        border-radius: var(--border-radius);
        text-align: center;
        cursor: pointer;
        transition: var(--transition);
        font-weight: 600;
        font-size: 14px;
        border: none;
        text-decoration: none;
    }

    .account-btn {
        background-color: var(--white);
        color: var(--text-color);
        border: 2px solid var(--border-color);
    }

    .account-btn:hover {
        background-color: var(--bg-color);
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

    .logout-btn {
        background: linear-gradient(135deg, var(--text-color), #374151);
        color: var(--white);
    }

    .logout-btn:hover {
        background: linear-gradient(135deg, #374151, var(--text-color));
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    /* Main Content */
    .main-content {
        margin-left: var(--sidebar-width);
        padding: 30px;
        background-color: var(--bg-color);
        min-height: 100vh;
        transition: var(--transition);
        width: calc(100% - var(--sidebar-width));
        min-width: 0;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--white), var(--bg-color));
        padding: 25px;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 8px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-subtitle {
        font-size: 16px;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* Filter Section */
    .filter-section {
        background: linear-gradient(135deg, var(--white), #fefefe);
        padding: 25px;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        margin-bottom: 30px;
    }

    .filter-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-title i {
        color: var(--primary-color);
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        min-width: 0;
    }

    .filter-group label {
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-color);
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .filter-group label i {
        color: var(--primary-color);
        font-size: 12px;
    }

    .filter-group select,
    .filter-group input {
        padding: 12px 15px;
        border: 2px solid var(--border-color);
        border-radius: var(--border-radius);
        font-size: 14px;
        transition: var(--transition);
        width: 100%;
        background-color: var(--white);
        font-weight: 500;
    }

    .filter-group select:focus,
    .filter-group input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        transform: translateY(-1px);
    }

    .filter-btn, .export-btn {
        padding: 12px 20px;
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-weight: 600;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 14px;
        white-space: nowrap;
        width: 100%;
        min-height: 48px;
        text-decoration: none;
    }

    .filter-btn {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--white);
        box-shadow: var(--shadow-sm);
    }

    .filter-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        background: linear-gradient(135deg, var(--primary-dark), #1e3a8a);
    }

    .export-btn {
        color: var(--white);
        box-shadow: var(--shadow-sm);
    }

    .export-btn.pdf-btn {
        background: linear-gradient(135deg, var(--danger-color), #dc2626);
    }

    .export-btn.pdf-btn:hover {
        background: linear-gradient(135deg, #dc2626, #b91c1c);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .export-btn.excel-btn {
        background: linear-gradient(135deg, var(--success-color), #059669);
    }

    .export-btn.excel-btn:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .export-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    /* Summary Cards */
    .summary-section {
        margin-bottom: 30px;
    }

    .summary-title {
        font-size: 20px;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .summary-title i {
        color: var(--primary-color);
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .summary-card {
        background: linear-gradient(135deg, var(--white), #fefefe);
        padding: 25px;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

    .summary-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    }

    .summary-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .summary-card.revenue::before {
        background: linear-gradient(135deg, var(--success-color), #059669);
    }

    .summary-card.discount::before {
        background: linear-gradient(135deg, var(--warning-color), #d97706);
    }

    .summary-card.refund::before {
        background: linear-gradient(135deg, var(--danger-color), #dc2626);
    }

    .summary-card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
    }

    .summary-card-title {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .summary-card-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        color: var(--white);
    }

    .summary-card-icon.primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    }

    .summary-card-icon.success {
        background: linear-gradient(135deg, var(--success-color), #059669);
    }

    .summary-card-icon.warning {
        background: linear-gradient(135deg, var(--warning-color), #d97706);
    }

    .summary-card-icon.danger {
        background: linear-gradient(135deg, var(--danger-color), #dc2626);
    }

    .summary-card-value {
        font-size: 28px;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 5px;
    }

    .summary-card-subtitle {
        font-size: 12px;
        color: var(--text-muted);
        font-weight: 500;
    }

    /* Detailed Table Section */
    .detailed-section {
        margin-bottom: 30px;
    }

    .detailed-title {
        font-size: 20px;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .detailed-title i {
        color: var(--primary-color);
    }

    .table-container {
        background: var(--white);
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
    }

    .table-header {
        padding: 20px 25px;
        background: linear-gradient(135deg, var(--bg-color), #f3f4f6);
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .page-info {
        font-size: 14px;
        color: var(--text-secondary);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .page-info i {
        color: var(--primary-color);
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .detailed-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 1200px;
    }

    .detailed-table th {
        background: linear-gradient(135deg, var(--text-color), #374151);
        color: var(--white);
        text-align: left;
        padding: 18px 15px;
        font-weight: 600;
        font-size: 13px;
        white-space: nowrap;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .detailed-table td {
        padding: 18px 15px;
        border-bottom: 1px solid var(--border-color);
        font-size: 14px;
        vertical-align: middle;
        white-space: nowrap;
        font-weight: 500;
    }

    .detailed-table tr:last-child td {
        border-bottom: none;
    }

    .detailed-table tbody tr {
        transition: var(--transition);
    }

    .detailed-table tbody tr:hover {
        background-color: var(--bg-color);
        transform: scale(1.01);
    }

    .detailed-table tbody tr:nth-child(even) {
        background-color: rgba(249, 250, 251, 0.5);
    }

    /* Order ID styling */
    .order-id {
        font-family: 'Courier New', monospace;
        font-weight: 700;
        color: var(--primary-color);
        background-color: var(--primary-light);
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
    }

    /* Payment method badges */
    .payment-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .payment-badge.cod {
        background-color: #fef3c7;
        color: #92400e;
    }

    .payment-badge.online {
        background-color: #d1fae5;
        color: #065f46;
    }

    .payment-badge.wallet {
        background-color: #ddd6fe;
        color: #5b21b6;
    }

    /* Currency formatting */
    .currency {
        font-weight: 600;
        color: var(--success-color);
    }

    .currency.discount {
        color: var(--warning-color);
    }

    .currency.total {
        color: var(--text-color);
        font-size: 15px;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-muted);
    }

    .empty-state i {
        font-size: 48px;
        margin-bottom: 20px;
        color: var(--border-color);
    }

    .empty-state h3 {
        font-size: 18px;
        margin-bottom: 10px;
        color: var(--text-secondary);
    }

    .empty-state p {
        font-size: 14px;
    }

    /* Pagination */
    .pagination-container {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, var(--white), #fefefe);
        padding: 20px 25px;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        flex-wrap: wrap;
        justify-content: center;
    }

    .page-btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 15px;
        border: 2px solid var(--border-color);
        background-color: var(--white);
        color: var(--text-color);
        text-decoration: none;
        border-radius: var(--border-radius);
        font-size: 14px;
        font-weight: 600;
        transition: var(--transition);
        cursor: pointer;
        min-width: 44px;
        justify-content: center;
        white-space: nowrap;
        min-height: 44px;
    }

    .page-btn:hover:not(:disabled) {
        background: linear-gradient(135deg, var(--primary-light), rgba(59, 130, 246, 0.1));
        color: var(--primary-color);
        border-color: var(--primary-color);
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    .page-btn.active {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--white);
        border-color: var(--primary-color);
        box-shadow: var(--shadow-sm);
    }

    .page-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background-color: var(--bg-color);
        color: var(--text-muted);
        transform: none;
    }

    .prev-btn, .next-btn {
        padding: 10px 20px;
        font-weight: 700;
    }

    .page-numbers {
        display: flex;
        align-items: center;
        gap: 5px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .page-dots {
        padding: 10px 5px;
        color: var(--text-secondary);
        font-weight: 600;
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .filter-row {
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        }
        
        .summary-grid {
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        }
    }

    @media (max-width: 1024px) {
        .main-content {
            margin-left: var(--sidebar-collapsed);
        }
        
        .sidebar {
            width: var(--sidebar-collapsed);
        }
        
        .sidebar .nav-item span {
            display: none;
        }
        
        .nav-item {
            justify-content: center;
            padding: 15px;
            margin-right: 0;
            border-radius: 0;
        }
        
        .nav-item i {
            margin-right: 0;
        }
        
        .filter-row {
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        }
        
        .summary-grid {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }
    }

    @media (max-width: 768px) {
        .menu-toggle {
            display: flex;
        }
        
        .sidebar {
            transform: translateX(-100%);
            width: var(--sidebar-width);
        }
        
        .sidebar.active {
            transform: translateX(0);
        }
        
        .main-content {
            margin-left: 0;
            padding: 20px 15px;
            width: 100%;
            padding-top: 70px;
        }
        
        .page-title {
            font-size: 24px;
        }
        
        .filter-section {
            padding: 20px;
        }
        
        .filter-row {
            grid-template-columns: 1fr;
            gap: 15px;
        }
        
        .summary-grid {
            grid-template-columns: 1fr;
        }
        
        .detailed-table {
            min-width: 800px;
        }
        
        .table-header {
            padding: 15px 20px;
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }
        
        .pagination {
            flex-wrap: wrap;
            gap: 8px;
            padding: 15px;
        }

        .page-btn {
            padding: 8px 12px;
            font-size: 13px;
            min-width: 36px;
            min-height: 36px;
        }
    }

    @media (max-width: 480px) {
        .main-content {
            padding: 15px 10px;
            padding-top: 60px;
        }
        
        .page-title {
            font-size: 20px;
        }
        
        .filter-section {
            padding: 15px;
        }
        
        .summary-card {
            padding: 20px;
        }
        
        .summary-card-value {
            font-size: 24px;
        }
        
        .detailed-table {
            min-width: 600px;
        }
        
        .detailed-table th,
        .detailed-table td {
            padding: 12px 8px;
            font-size: 12px;
        }
    }

    /* Print styles */
    @media print {
        .sidebar,
        .menu-toggle,
        .sidebar-overlay,
        .filter-section,
        .pagination-container {
            display: none !important;
        }
        
        .main-content {
            margin-left: 0 !important;
            padding: 0 !important;
            width: 100% !important;
        }
        
        .table-container {
            box-shadow: none;
            border: 1px solid #000;
        }
        
        .detailed-table {
            min-width: auto;
        }
    }

    /* Loading states */
    .loading {
        opacity: 0.6;
        pointer-events: none;
    }

    .loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 20px;
        height: 20px;
        margin: -10px 0 0 -10px;
        border: 2px solid var(--primary-color);
        border-radius: 50%;
        border-top-color: transparent;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Focus styles for accessibility */
    .nav-item:focus,
    .page-btn:focus,
    .filter-group select:focus,
    .filter-group input:focus,
    .filter-btn:focus,
    .export-btn:focus,
    .menu-toggle:focus {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Mobile Menu Toggle -->
    <button class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="logo">
          <span class="logo-text">Chrono</span>X
        </div>
      </div>

      <div class="nav-items">
        <a href="/admin/dashboard" class="nav-item"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
        <a href="/admin/product" class="nav-item"><i class="fas fa-box"></i> <span>Products</span></a>
        <a href="/admin/orders" class="nav-item"><i class="fas fa-list"></i> <span>Order List</span></a>
        <a href="/admin/userlist" class="nav-item"><i class="fas fa-user"></i> <span>Customer</span></a>
        <a href="/admin/returns" class="nav-item"><i class="fas fa-undo"></i><span>Returns</span></a>
        <a href="/admin/sales-report" class="nav-item active"><i class="fas fa-chart-line"></i> <span>Sales Report</span></a>
        <a href="/admin/category" class="nav-item"><i class="fas fa-tags"></i> <span>Category</span></a>
        <a href="/admin/category-offers" class="nav-item"><i class="fas fa-percent"></i> <span>Category Offers</span></a>
        <a href="/admin/coupon" class="nav-item"><i class="fas fa-ticket-alt"></i> <span>Coupons</span></a>
        <a href="/admin/referrals" class="nav-item"><i class="fas fa-users"></i><span>Referrals</span></a>
      </div>

      <div class="sidebar-footer">
        <button class="account-btn">Account</button>
        <a href="/admin/logout" class="logout-btn">Logout</a>
      </div>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Professional Sales Report</h1>
            <p class="page-subtitle">Comprehensive analysis of sales performance with detailed insights</p>
        </div>
        
        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-title">
                <i class="fas fa-filter"></i>
                Report Filters & Options
            </div>
            <div class="filter-row">
                <div class="filter-group">
                    <label><i class="fas fa-calendar"></i> Report Type:</label>
                    <select id="reportType">
                        <option value="daily" <%= type === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= type === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= type === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= type === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%= type === 'custom' ? 'selected' : '' %>>Custom Date Range</option>
                    </select>
                </div>
                
                <div class="filter-group" id="customDateGroup" style="display: none;">
                    <label><i class="fas fa-calendar-alt"></i> From Date:</label>
                    <input type="date" id="fromDate" value="<%= fromDate %>">
                </div>
                
                <div class="filter-group" id="customDateGroup2" style="display: none;">
                    <label><i class="fas fa-calendar-alt"></i> To Date:</label>
                    <input type="date" id="toDate" value="<%= toDate %>">
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-box"></i> Product:</label>
                    <select id="productFilter">
                        <option value="all">All Products</option>
                        <% if (typeof products !== 'undefined') { %>
                            <% products.forEach(prod => { %>
                                <option value="<%= prod._id %>" <%= product === prod._id.toString() ? 'selected' : '' %>>
                                    <%= prod.productName %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-tags"></i> Category:</label>
                    <select id="categoryFilter">
                        <option value="all">All Categories</option>
                        <% if (typeof categories !== 'undefined') { %>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat._id %>" <%= category === cat._id.toString() ? 'selected' : '' %>>
                                    <%= cat.name %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <div class="filter-group">
                    <label><i class="fas fa-credit-card"></i> Payment Method:</label>
                    <select id="paymentMethodFilter">
                        <option value="all">All Methods</option>
                        <option value="COD" <%= paymentMethod === 'COD' ? 'selected' : '' %>>Cash on Delivery</option>
                        <option value="ONLINE" <%= paymentMethod === 'ONLINE' ? 'selected' : '' %>>Online Payment</option>
                        <option value="Wallet" <%= paymentMethod === 'Wallet' ? 'selected' : '' %>>Wallet</option>
                    </select>
                </div>
             
                <div class="filter-group">
                    <button class="filter-btn" onclick="generateReport()">
                        <i class="fas fa-search"></i> Generate Report
                    </button>
                </div>
                 
                <div class="filter-group">
                    <button class="export-btn pdf-btn" onclick="exportReportPDF()">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                </div>

                <div class="filter-group">
                    <button class="export-btn excel-btn" onclick="exportReportExcel()">
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                </div>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="summary-section">
            <div class="summary-title">
                <i class="fas fa-chart-bar"></i>
                Sales Summary
            </div>
            <div class="summary-grid">
                <div class="summary-card">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Total Orders</div>
                        <div class="summary-card-icon primary">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                    <div class="summary-card-value"><%= typeof summary !== 'undefined' ? summary.totalOrders : 0 %></div>
                    <div class="summary-card-subtitle">Orders processed</div>
                </div>

                <div class="summary-card">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Products Sold</div>
                        <div class="summary-card-icon primary">
                            <i class="fas fa-box"></i>
                        </div>
                    </div>
                    <div class="summary-card-value"><%= typeof summary !== 'undefined' ? summary.totalProductsSold : 0 %></div>
                    <div class="summary-card-subtitle">Total quantity</div>
                </div>

                <div class="summary-card">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Gross Sales</div>
                        <div class="summary-card-icon success">
                            <i class="fas fa-rupee-sign"></i>
                        </div>
                    </div>
                    <div class="summary-card-value">₹<%= typeof summary !== 'undefined' ? summary.grossSales.toLocaleString('en-IN') : 0 %></div>
                    <div class="summary-card-subtitle">Before discounts</div>
                </div>

                <div class="summary-card discount">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Total Discounts</div>
                        <div class="summary-card-icon warning">
                            <i class="fas fa-percentage"></i>
                        </div>
                    </div>
                    <div class="summary-card-value">₹<%= typeof summary !== 'undefined' ? summary.totalDiscounts.toLocaleString('en-IN') : 0 %></div>
                    <div class="summary-card-subtitle">Product discounts</div>
                </div>

                <div class="summary-card discount">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Coupon Discounts</div>
                        <div class="summary-card-icon warning">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                    </div>
                    <div class="summary-card-value">₹<%= typeof summary !== 'undefined' ? summary.couponDiscounts.toLocaleString('en-IN') : 0 %></div>
                    <div class="summary-card-subtitle">Coupon savings</div>
                </div>

                <div class="summary-card refund">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Refunds</div>
                        <div class="summary-card-icon danger">
                            <i class="fas fa-undo"></i>
                        </div>
                    </div>
                    <div class="summary-card-value">₹<%= typeof summary !== 'undefined' ? summary.refunds.toLocaleString('en-IN') : 0 %></div>
                    <div class="summary-card-subtitle">Total refunded</div>
                </div>

                <div class="summary-card revenue">
                    <div class="summary-card-header">
                        <div class="summary-card-title">Net Revenue</div>
                        <div class="summary-card-icon success">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                    <div class="summary-card-value">₹<%= typeof summary !== 'undefined' ? summary.netRevenue.toLocaleString('en-IN') : 0 %></div>
                    <div class="summary-card-subtitle">Final revenue</div>
                </div>
            </div>
        </div>

        <!-- Detailed Section -->
        <div class="detailed-section">
            <div class="detailed-title">
                <i class="fas fa-table"></i>
                Detailed Order Analysis
            </div>
            
            <div class="table-container">
                <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                    <div class="table-header">
                        <div class="page-info">
                            <i class="fas fa-info-circle"></i>
                            Showing <%= startRecord %> - <%= endRecord %> of <%= totalOrders %> results
                        </div>
                    </div>
                <% } %>

                <div class="table-wrapper">
                    <table class="detailed-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer Name</th>
                                <th>Email</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Applied Discount</th>
                                <th>Final Sale Price</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                                <% orders.forEach(order => { %>
                                    <% order.items.forEach((item, index) => { %>
                                        <% if (item.status !== 'Cancelled') { %>
                                            <%
                                                // Calculate accurate financial values
                                                const quantity = item.quantity || 0;
                                                const unitPrice = item.price || item.pricingSnapshot?.regularPrice || 0;
                                                const itemDiscount = item.discount || 0;
                                                const discountShare = item.discountShare || 0;
                                                const totalDiscount = itemDiscount + discountShare;
                                                
                                                // Calculate final price - try multiple sources
                                                let finalPrice = item.paidPrice || 0;
                                                if (!finalPrice) {
                                                    finalPrice = item.pricingSnapshot?.finalPrice || 0;
                                                }
                                                if (!finalPrice && unitPrice > 0) {
                                                    // Calculate from unit price minus discounts
                                                    finalPrice = unitPrice - itemDiscount - discountShare;
                                                    finalPrice = Math.max(0, finalPrice); // Ensure non-negative
                                                }
                                                
                                                const totalAmount = finalPrice * quantity;
                                            %>
                                            <tr>
                                                <td>
                                                    <span class="order-id">#<%= order._id.toString().slice(-6).toUpperCase() %></span>
                                                </td>
                                                <td><%= order.user?.fullname || 'N/A' %></td>
                                                <td><%= order.user?.email || 'N/A' %></td>
                                                <td>
                                                    <%= item.productSnapshot?.name || item.product?.productName || 'N/A' %>
                                                </td>
                                                <td><%= quantity %></td>
                                                <td>
                                                    <span class="currency">₹<%= unitPrice.toLocaleString('en-IN') %></span>
                                                </td>
                                                <td>
                                                    <span class="currency discount">₹<%= totalDiscount.toLocaleString('en-IN') %></span>
                                                </td>
                                                <td>
                                                    <span class="currency">₹<%= finalPrice.toLocaleString('en-IN') %></span>
                                                </td>
                                                <td>
                                                    <span class="currency total">₹<%= totalAmount.toLocaleString('en-IN') %></span>
                                                </td>
                                                <td>
                                                    <span class="payment-badge <%= (order.paymentMethod || '').toLowerCase() %>">
                                                        <%= order.paymentMethod || 'N/A' %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% }) %>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="10">
                                        <div class="empty-state">
                                            <i class="fas fa-chart-line"></i>
                                            <h3>No Sales Data Found</h3>
                                            <p>No sales data available for the selected filters and date range.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination Controls -->
        <% if (typeof orders !== 'undefined' && orders.length > 0 && totalPages > 1) { %>
            <div class="pagination-container">
                <div class="pagination">
                    <!-- Previous Button -->
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>&product=<%= product %>&category=<%= category %>&paymentMethod=<%= paymentMethod %>" class="page-btn prev-btn">
                            <i class="fas fa-chevron-left"></i>
                            <span>Previous</span>
                        </a>
                    <% } else { %>
                        <button class="page-btn prev-btn" disabled>
                            <i class="fas fa-chevron-left"></i>
                            <span>Previous</span>
                        </button>
                    <% } %>

                    <!-- Page Numbers -->
                    <div class="page-numbers">
                        <%
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);

                        if (currentPage <= 3) {
                            endPage = Math.min(5, totalPages);
                        }
                        if (currentPage > totalPages - 3) {
                            startPage = Math.max(1, totalPages - 4);
                        }
                        %>

                        <!-- First page if not in range -->
                        <% if (startPage > 1) { %>
                            <a href="?page=1&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>&product=<%= product %>&category=<%= category %>&paymentMethod=<%= paymentMethod %>" class="page-btn">1</a>
                            <% if (startPage > 2) { %>
                                <span class="page-dots">...</span>
                            <% } %>
                        <% } %>

                        <!-- Page range -->
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="?page=<%= i %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>&product=<%= product %>&category=<%= category %>&paymentMethod=<%= paymentMethod %>"
                               class="page-btn <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>

                        <!-- Last page if not in range -->
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="page-dots">...</span>
                            <% } %>
                            <a href="?page=<%= totalPages %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>&product=<%= product %>&category=<%= category %>&paymentMethod=<%= paymentMethod %>" class="page-btn"><%= totalPages %></a>
                        <% } %>
                    </div>

                    <!-- Next Button -->
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&type=<%= type %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>&product=<%= product %>&category=<%= category %>&paymentMethod=<%= paymentMethod %>" class="page-btn next-btn">
                            <span>Next</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } else { %>
                        <button class="page-btn next-btn" disabled>
                            <span>Next</span>
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    <% } %>
                </div>
            </div>
        <% } %>
    </main>
  </div>

<script>
  // Mobile Menu Toggle
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.getElementById('sidebar');
  const sidebarOverlay = document.getElementById('sidebarOverlay');

  function toggleSidebar() {
    sidebar.classList.toggle('active');
    sidebarOverlay.classList.toggle('active');
    
    if (sidebar.classList.contains('active')) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  }

  function closeSidebar() {
    sidebar.classList.remove('active');
    sidebarOverlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  menuToggle.addEventListener('click', toggleSidebar);
  sidebarOverlay.addEventListener('click', closeSidebar);

  window.addEventListener('resize', function() {
    if (window.innerWidth > 768) {
      closeSidebar();
    }
  });

  sidebar.addEventListener('click', function(e) {
    e.stopPropagation();
  });

  // Date field toggle functionality
  document.addEventListener('DOMContentLoaded', function () {
    const reportType = document.getElementById('reportType');
    const customDateGroup = document.getElementById('customDateGroup');
    const customDateGroup2 = document.getElementById('customDateGroup2');

    function toggleDateFields() {
      if (reportType.value === 'custom') {
        customDateGroup.style.display = 'block';
        customDateGroup2.style.display = 'block';
      } else {
        customDateGroup.style.display = 'none';
        customDateGroup2.style.display = 'none';
      }
    }

    reportType.addEventListener('change', toggleDateFields);
    toggleDateFields();

    // Set default date range (last 7 days)
    const today = new Date();
    const oneWeekAgo = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
    document.getElementById('fromDate').value ||= oneWeekAgo.toISOString().split('T')[0];
    document.getElementById('toDate').value ||= today.toISOString().split('T')[0];
  });

  function generateReport() {
    const type = document.getElementById('reportType').value;
    const from = document.getElementById('fromDate').value;
    const to = document.getElementById('toDate').value;
    const product = document.getElementById('productFilter').value;
    const category = document.getElementById('categoryFilter').value;
    const paymentMethod = document.getElementById('paymentMethodFilter').value;
    
    let url = `/admin/sales-report?type=${type}&page=1&product=${product}&category=${category}&paymentMethod=${paymentMethod}`;
    
    if (type === 'custom' && from && to) {
      url += `&fromDate=${from}&toDate=${to}`;
    }
    
    // Add loading state
    const btn = document.querySelector('.filter-btn');
    const original = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
    btn.disabled = true;
    
    setTimeout(() => {
      window.location.href = url;
    }, 500);
  }

  function exportReportPDF() {
    exportHelper('pdf-btn', '/admin/sales-report/export-pdf');
  }

  function exportReportExcel() {
    exportHelper('excel-btn', '/admin/sales-report/export-excel');
  }

  function exportHelper(buttonClass, baseUrl) {
    const type = document.getElementById('reportType').value;
    const from = document.getElementById('fromDate').value;
    const to = document.getElementById('toDate').value;
    const product = document.getElementById('productFilter').value;
    const category = document.getElementById('categoryFilter').value;
    const paymentMethod = document.getElementById('paymentMethodFilter').value;

    if (type === 'custom' && (!from || !to)) {
      Swal.fire({
        icon: 'warning',
        title: 'Missing Date Range',
        text: 'Please select both From and To dates for custom range',
        confirmButtonColor: '#3b82f6'
      });
      return;
    }

    let url = `${baseUrl}?type=${type}&product=${product}&category=${category}&paymentMethod=${paymentMethod}`;
    if (type === 'custom' && from && to) {
      url += `&fromDate=${from}&toDate=${to}`;
    }

    const btn = document.querySelector(`.${buttonClass}`);
    const original = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
    btn.disabled = true;

    // Show success message
    Swal.fire({
      icon: 'success',
      title: 'Export Started',
      text: 'Your report is being generated and will download shortly.',
      timer: 2000,
      showConfirmButton: false
    });

    setTimeout(() => {
      window.open(url, '_blank');
      btn.innerHTML = original;
      btn.disabled = false;
    }, 1000);
  }

  // Add smooth scrolling for better UX
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      document.querySelector(this.getAttribute('href')).scrollIntoView({
        behavior: 'smooth'
      });
    });
  });

  // Add keyboard shortcuts
  document.addEventListener('keydown', function(e) {
    if (e.ctrlKey || e.metaKey) {
      switch(e.key) {
        case 'g':
          e.preventDefault();
          generateReport();
          break;
        case 'p':
          e.preventDefault();
          exportReportPDF();
          break;
        case 'e':
          e.preventDefault();
          exportReportExcel();
          break;
      }
    }
  });
</script>

</body>
</html>