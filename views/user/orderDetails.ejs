    <script>
        function openReturnModal() {
            document.getElementById('returnModal').style.display = 'block';
            calculateRefund();
        }

        function closeReturnModal() {
            document.getElementById('returnModal').style.display = 'none';
        }

        function calculateRefund() {
            let total = 0;
            const checkboxes = document.querySelectorAll('input[name="items"]:checked');

            checkboxes.forEach((checkbox, index) => {
                const price = parseFloat(checkbox.dataset.price);
                const qtyInput = document.querySelector(`input[name="quantity_${index}"]`);
                const quantity = parseInt(qtyInput.value) || 0;
                total += price * quantity;
            });

            document.getElementById('refundAmount').textContent = total.toLocaleString();
        }

        // Add event listeners for quantity changes and checkbox changes
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[name="items"]');
            const qtyInputs = document.querySelectorAll('.qty-input');

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', calculateRefund);
            });

            qtyInputs.forEach(input => {
                input.addEventListener('input', calculateRefund);
            });
        });

        // Handle form submission
        document.getElementById('returnForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const formData = new FormData(this);
            const selectedItems = [];
            const checkboxes = document.querySelectorAll('input[name="items"]:checked');

            checkboxes.forEach((checkbox, index) => {
                const qtyInput = document.querySelector(`input[name="quantity_${index}"]`);
                selectedItems.push({
                    productId: checkbox.value,
                    quantity: parseInt(qtyInput.value)
                });
            });

            if (selectedItems.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No Items Selected',
                    text: 'Please select at least one item to return',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            const returnData = {
                orderId: '<%= order._id %>',
                reason: formData.get('reason'),
                description: formData.get('description'),
                items: selectedItems
            };

            fetch('/request-return', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(returnData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: data.message,
                        confirmButtonColor: '#3085d6'
                    }).then(() => {
                        closeReturnModal();
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed!',
                        text: data.message || 'Failed to submit return request',
                        confirmButtonColor: '#3085d6'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'An error occurred while submitting the return request',
                    confirmButtonColor: '#3085d6'
                });
            });
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('returnModal');
            if (event.target === modal) {
                closeReturnModal();
            }
        }

        // Function to cancel individual order item
        async function cancelOrderItem(orderId, itemId, productName) {
            const { value: reason } = await Swal.fire({
                title: 'Cancel Item',
                text: `Are you sure you want to cancel "${productName}"?`,
                input: 'select',
                inputOptions: {
                    'Changed my mind': 'Changed my mind',
                    'Found better price': 'Found better price',
                    'No longer needed': 'No longer needed',
                    'Ordered by mistake': 'Ordered by mistake',
                    'Other': 'Other reason'
                },
                inputPlaceholder: 'Select cancellation reason',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel item',
                cancelButtonText: 'Keep item',
                inputValidator: (value) => {
                    if (!value) {
                        return 'Please select a reason for cancellation';
                    }
                }
            });

            if (reason) {
                try {
                    showLoadingDialog('Cancelling Item...', 'Please wait while we process your cancellation');

                    const response = await fetch(`/cancel-order-item/${orderId}/${itemId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ reason })
                    });

                    const data = await response.json();
                    closeLoadingDialog();

                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Item Cancelled!',
                            html: `
                                <p>${data.message}</p>
                                ${data.refundAmount > 0 ?
                                    `<div style="background: #d4edda; padding: 10px; border-radius: 5px; margin-top: 10px;">
                                        <i class="fas fa-wallet" style="color: #28a745;"></i>
                                        <strong>₹${data.refundAmount.toLocaleString()}</strong> has been credited to your wallet
                                    </div>` : ''
                                }
                            `,
                            confirmButtonColor: '#3085d6'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Cancellation Failed',
                            text: data.message || 'Failed to cancel the item',
                            confirmButtonColor: '#3085d6'
                        });
                    }
                } catch (error) {
                    closeLoadingDialog();
                    console.error('Error cancelling item:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while cancelling the item. Please try again.',
                        confirmButtonColor: '#3085d6'
                    });
                }
            }
        }
    </script>

