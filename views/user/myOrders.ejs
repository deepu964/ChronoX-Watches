<body>
    <%- include("../partials/user/header") %>
    
    <div class="container">
        
        <div class="page-header">
            <h1 class="page-title">My Orders</h1>
            <p class="page-subtitle">Track and manage all your orders</p>
        </div>

        
        <div class="orders-container">
            <!-- Simple Search Section -->
            <div class="search-section">
                <form method="GET" action="/my-orders" class="search-form">
                    <div class="search-input-group">
                        <input type="text" name="search" placeholder="Search by Order ID (e.g., #C12DB731 or C12DB731)..."
                               value="<%= searchParams?.search || '' %>" class="search-input">
                        <button type="submit" class="search-btn">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <% if (searchParams?.search) { %>
                            <a href="/my-orders" class="clear-btn">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        <% } %>
                    </div>
                </form>
            </div>

            <div class="orders-header">
                <div class="orders-count">
                    <% if (totalOrders > 0) { %>
                        <% if (searchParams?.search) { %>
                            Found <%= totalOrders %> order(s) with ID containing "<%= searchParams.search %>"
                        <% } else { %>
                            Showing <%= orders.length %> of <%= totalOrders %> orders
                        <% } %>
                    <% } else { %>
                        <% if (searchParams?.search) { %>
                            No orders found with ID containing "<%= searchParams.search %>"
                        <% } else { %>
                            No orders found
                        <% } %>
                    <% } %>
                </div>
            </div>


            <!-- Orders List -->
            <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <div class="order-card" data-status="<%= order.status.toLowerCase() %>">
                        <div class="order-header">
                            <div class="order-info">
                                <div class="order-id">Order #<%= order._id.toString().slice(-8).toUpperCase() %></div>
                                <div class="order-date">
                                    Placed on <%= new Date(order.createdAt).toLocaleDateString('en-IN', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    }) %>
                                </div>
                            </div>
                            <div class="order-status-container">
                                <div class="order-status status-<%= order.status.toLowerCase() %>">
                                    <%= order.status %>
                                </div>
                                <div class="order-status-container">
                                   <% if (order.paymentStatus === 'Pending' && order.paymentMethod === 'ONLINE' && order.status !== "Delivered") { %>
                                    <input type="hidden" id="retry-<%= order._id %>" value="<%= order.addressId %>">
                                    <input type="hidden" id="orderAmount-<%= order._id %>" value="<%= order.totalAmount %>">
                                    <button class="retry-button" onclick="retryPayment('<%= order._id%>')">
                                        Retry Payment
                                    </button>
                                <% } %>
                                </div>
                                <%
                                    const cancelledItems = order.items.filter(item => item.status === 'Cancelled');
                                    const activeItems = order.items.filter(item => item.status !== 'Cancelled');
                                %>
                                <% if (cancelledItems.length > 0 && activeItems.length > 0) { %>
                                    <div class="partial-cancel-badge">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <%= cancelledItems.length %> item(s) cancelled
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        
                       

                        <div class="order-items">
                            <% order.items.slice(0, 3).forEach(item => { %>
                                <div class="order-item">
                                    <div class="item-image">
                                        <% if (item.product.images && item.product.images.length > 0) { %>
                                            <img src="https://res.cloudinary.com/<%= cloudName %>/image/upload/w_50,h_50,c_fill/<%= item.product.images[0].public_id %>" 
                                                 alt="<%= item.product.name %>" 
                                                 onerror="this.src='/images/placeholder.jpg'">
                                        <% } else { %>
                                            <img src="/images/placeholder.jpg" alt="No image">
                                        <% } %>
                                    </div>
                                    <div class="item-details">
                                        <div class="item-name"><%= item.product.name %></div>
                                        <div class="item-quantity">Qty: <%= item.quantity %></div>
                                    </div>
                                </div>
                            <% }) %>
                            <% if (order.items.length > 3) { %>
                                <div class="order-item">
                                    <div style="text-align: center; color: #666; font-size: 14px; width: 100%;">
                                        +<%= order.items.length - 3 %> more item(s)
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <div class="order-footer">
                            <div class="order-total">
                                Total: ₹<%= order.totalAmount.toLocaleString() %>
                            </div>
                            <div class="order-actions">
                               <% if (order.status === "Placed" || order.status === "Delivered") { %>
                                 <a href="/download-invoice/<%= order.id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Invoice
                                </a>
                               <% } %>
                                <a href="/order-details/<%= order._id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                                <% if (order.status === 'Placed') { %>
                                    <button class="btn btn-secondary" onclick="cancelOrder('<%= order._id %>')">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>

            <% } else { %>
                <!-- Empty State -->
                <div class="empty-orders">
                    <% if (searchParams?.search) { %>
                        <i class="fas fa-search"></i>
                        <h3>No Orders Found</h3>
                        <p>No orders found with ID containing "<%= searchParams.search %>". Try a different Order ID.</p>
                        <a href="/my-orders" class="btn btn-primary">
                            <i class="fas fa-undo"></i>
                            Clear Search
                        </a>
                    <% } else { %>
                        <i class="fas fa-shopping-bag"></i>
                        <h3>No Orders Yet</h3>
                        <p>You haven't placed any orders yet. Start shopping to see your orders here!</p>
                        <a href="/shop" class="btn btn-primary">
                            <i class="fas fa-shopping-cart"></i>
                            Start Shopping
                        </a>
                    <% } %>
                </div>
            <% } %>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/my-orders?page=<%= currentPage - 1 %><%= searchParams?.search ? '&search=' + encodeURIComponent(searchParams.search) : '' %>">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === currentPage) { %>
                            <span class="current"><%= i %></span>
                        <% } else { %>
                            <a href="/my-orders?page=<%= i %><%= searchParams?.search ? '&search=' + encodeURIComponent(searchParams.search) : '' %>"><%= i %></a>
                        <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <a href="/my-orders?page=<%= currentPage + 1 %><%= searchParams?.search ? '&search=' + encodeURIComponent(searchParams.search) : '' %>">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
        </div>
    </div>

    <%- include("../partials/user/footer") %>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>




        // Simple cancel order function (keeping existing functionality)
        async function cancelOrder(orderId) {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to cancel this order?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!'
            });

            if (result.isConfirmed) {
                fetch(`/cancel-order/${orderId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(res => {
                   console.log('this is hrerer11')
                    if (res.ok) {
                         console.log('this is hrerer')
                        Swal.fire('Cancelled!', 'Order cancelled successfully.', 'success')
                        .then(() => window.location.reload());
                    } else {
                        Swal.fire('Error!', 'Failed to cancel order.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error!', 'An error occurred.', 'error');
                });
            }
        }

async function retryPayment(orderId) {
    const addressIdInput = document.getElementById(`retry-${orderId}`);
    const amountInput = document.getElementById(`orderAmount-${orderId}`);

    if (!addressIdInput || !amountInput) {
        return showToast("Missing address or amount input field");
    }

    const addressId = addressIdInput.value;
    const amount = amountInput.value;

    if (!amount || !orderId || !addressId) {
        return showToast("Amount, orderId or address is missing");
    }

    try {
        const response = await fetch('/create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                amount,
                orderId,
                address: addressId
            })
        });

        const data = await response.json();

        if (!data.success) {
            return showToast(data.message || 'Failed to create Razorpay order');
        }

        const options = {
            key: data.key,
            amount: data.amount,
            currency: data.currency,
            name: "ChronoX",
            description: "Order Payment",
            order_id: data.orderId,
            handler: async function (response) {
                const result = await fetch('/payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        paymentMethod: 'ONLINE',
                        razorpayOrderId: response.razorpay_order_id,
                        paymentId: response.razorpay_payment_id,
                        addressId: addressId,
                        orderId: orderId
                    })
                });

                const resData = await result.json();

                if (resData.success) {
                    window.location.href = `/order-success?orderId=${resData.orderId}`;
                } else {
                    window.location.href = `/retry-payment/${orderId}`;
                }
            },
            prefill: {
                name: "<%= user.fullName %>",
                email: "<%= user.email %>",
                contact: "<%= user.mobile %>"
            },
            theme: { color: "#3399cc" },
            retry: { enabled: true, max_count: 3 },
            

             modal: {
                ondismiss: function () {
                    window.location.href = `/retry-payment/${orderId}?addressId=${addressId}`;
                }
            }


        };

        const razorpay = new Razorpay(options);
        razorpay.open();

    } catch (err) {
        console.error(err);
        showToast('Something went wrong. Try again.');
    }
}
    

    </script>
