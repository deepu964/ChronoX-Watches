    <script>
        function selectPaymentMethod() {
            // Mark as selected visually
            document.querySelector('.payment-option').classList.add('selected');
            // Already set by default: but just to be sure
            document.getElementById('payment-method-input').value = 'COD';
        }

        // Handle form submission
        document.getElementById('place-order-form').addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = document.getElementById('confirm-order-btn');
            const originalText = submitBtn.textContent;

            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';

            try {
                const formData = new FormData(this);
                const response = await fetch('/payment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        addressId: formData.get('addressId'),
                        paymentMethod: formData.get('paymentMethod')
                    })
                });

                const data = await response.json();

                if (data.success) {
                    // Redirect to success page
                    window.location.href = data.redirectUrl || `/order-success?orderId=${data.orderId}`;
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Order Failed',
                        text: data.message || 'Failed to place order',
                        confirmButtonColor: '#3085d6'
                    });
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                }
            } catch (error) {
                console.error('Error placing order:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    confirmButtonColor: '#3085d6'
                });
                submitBtn.disabled = false;
                submitBtn.textContent = originalText;
            }
            
        });
        async function payNow(addressId) {
            const amount = document.getElementById('orderAmount').value;

            if (!amount || !addressId) {
                return alert("Amount or address is missing");
            }

            try {
                const response = await fetch('/create-order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount, address: addressId })
                });

                const data = await response.json();

                if (!data.success) {
                    return alert(data.message || 'Failed to create Razorpay order');
                }

                const options = {
                    key: data.key,
                    amount: data.amount,
                    currency: data.currency,
                    name: "ChronoX",
                    description: "Order Payment",
                    order_id: data.orderId,
                    handler: async function (response) {
                        // Payment was successful – now place the order
                        const result = await fetch('/payment', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                paymentMethod: 'ONLINE',
                                razorpayOrderId: response.razorpay_order_id,
                                paymentId: response.razorpay_payment_id,
                                addressId: addressId   
                            })
                        });

                        const resData = await result.json();
                        if (resData.success) {
                            window.location.href = `/order-success?orderId=${resData.orderId}`;
                        } else {
                            window.location.href = `/order-failed?orderId=${data.orderId}`;
                        }
                    },
                    prefill: {
                        name: "<%= user.fullName %>",
                        email: "<%= user.email %>",
                        contact: "<%= user.mobile %>"
                    },
                    theme: { color: "#3399cc" },
                    retry: { enabled: true, max_count: 3 }
                };

                const razorpay = new Razorpay(options);
                razorpay.open();

            } catch (err) {
                console.error(err);
                alert('Something went wrong. Try again.');
            }
        }


                    
    </script>
