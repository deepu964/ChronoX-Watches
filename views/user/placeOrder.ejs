        async function payNow(addressId) {
    const amount = document.getElementById('orderAmount').value;

    if (!amount || !addressId) {
        return showToast("Amount or address is missing");
    }

    try {
        const response = await fetch('/create-order', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ amount, address: addressId })
        });

        const data = await response.json();

        if (!data.success) {
            return showToast(data.message || 'Failed to create Razorpay order');
        }

        // ✅ [Update #1] Store order ID to use in both success and fail cases
        const orderId = data.localOrderId; // ← must be sent from backend

        const options = {
            key: data.key,
            amount: data.amount,
            currency: data.currency,
            name: "ChronoX",
            description: "Order Payment",
            order_id: data.orderId,  // Razorpay order_id
            prefill: {
                name: "<%= user.fullName %>",
                email: "<%= user.email %>",
                contact: "<%= user.mobile %>"
            },
            theme: { color: "#3399cc" },
            retry: { enabled: true, max_count: 3 },

            // ✅ Payment Success Handler – verify payment
            handler: async function (response) {
                try {
                    const result = await fetch('/verify-payment', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            razorpay_order_id: response.razorpay_order_id,
                            razorpay_payment_id: response.razorpay_payment_id,
                            razorpay_signature: response.razorpay_signature,
                            localOrderId: orderId
                        })
                    });

                    const resData = await result.json();
                    if (resData.success) {
                        window.location.href = resData.redirectUrl;
                    } else {
                        window.location.href = resData.redirectUrl || `/payment-failure?orderId=${orderId}`;
                    }
                } catch (error) {
                    console.error('Payment verification error:', error);
                    window.location.href = `/payment-failure?orderId=${orderId}`;
                }
            },

            // ✅ Payment Modal Dismiss Handler – redirect to failure page
            modal: {
                ondismiss: function () {
                    // User closed the payment modal - consider it a failure
                    window.location.href = `/payment-failure?orderId=${orderId}`;
                }
            }
        };

        const razorpay = new Razorpay(options);
        razorpay.open();

    } catch (err) {
        console.error(err);
        showToast('Something went wrong. Try again.');
    }
