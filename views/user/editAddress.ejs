<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        /* Header */
        .header {
            background: rgba(0, 0, 0, 0.95);
            backdrop-filter: blur(10px);
            color: white;
            padding: 12px 0;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 30px;
        }

        .hamburger {
            font-size: 20px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .hamburger:hover {
            transform: scale(1.1);
        }

        .nav-menu {
            display: flex;
            gap: 30px;
            list-style: none;
        }

        .nav-menu a {
            color: white;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-menu a:hover {
            color: #667eea;
            transform: translateY(-2px);
        }

        .nav-menu a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background: linear-gradient(45deg, #667eea, #764ba2);
            transition: width 0.3s ease;
        }

        .nav-menu a:hover::after {
            width: 100%;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            padding: 10px 45px 10px 20px;
            border: none;
            border-radius: 25px;
            width: 280px;
            font-size: 14px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.02);
        }

        .search-box input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.7);
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .search-icon:hover {
            color: white;
        }

        .header-icons {
            display: flex;
            gap: 20px;
            font-size: 18px;
        }

        .header-icons i {
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 8px;
            border-radius: 50%;
        }

        .header-icons i:hover {
            color: #667eea;
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        /* Main Container */
        .main-container {
            max-width: 1200px;
            margin: 30px auto;
            display: flex;
            gap: 30px;
            padding: 0 20px;
        }

        /* Sidebar */
        .sidebar {
            width: 320px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 0;
            height: fit-content;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .profile-section {
            padding: 40px 30px 30px;
            text-align: center;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            border-radius: 20px 20px 0 0;
        }

        .profile-info {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 28px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .profile-avatar:hover {
            transform: scale(1.05) rotateY(10deg);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        .profile-name {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-top: 10px;
        }

        .menu-list {
            list-style: none;
            padding: 0;
        }

        .menu-item {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .menu-item:last-child {
            border-bottom: none;
        }

        .menu-item a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 18px 30px;
            text-decoration: none;
            color: #555;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .menu-item a::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 100%;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            transition: width 0.3s ease;
            z-index: -1;
        }

        .menu-item a:hover::before {
            width: 100%;
        }

        .menu-item a:hover {
            color: #667eea;
            padding-left: 40px;
            transform: translateX(5px);
        }

        .menu-item.active a {
            color: #667eea;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        }

        .menu-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .menu-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            color: #667eea;
        }

        .wishlist-badge {
            background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
            color: white;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
            box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 0;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .breadcrumb {
            padding: 20px 40px;
            font-size: 14px;
            color: #666;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
            border-radius: 20px 20px 0 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .breadcrumb a {
            color: #667eea;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb a:hover {
            color: #764ba2;
        }

        .content-header {
            padding: 40px 40px 20px;
        }

        .page-title {
            font-size: 32px;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 30px;
        }

        /* Add Address Form */
        .add-address-form {
            padding: 0 40px 40px;
        }

        .form-section {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .form-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-icon {
            color: #667eea;
            font-size: 18px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
            margin-bottom: 25px;
        }

        .form-row.single {
            grid-template-columns: 1fr;
        }

        .form-group {
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
            font-size: 14px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            font-size: 15px;
            font-family: inherit;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
            background: white;
        }

        .form-group input:hover,
        .form-group select:hover,
        .form-group textarea:hover {
            border-color: #667eea;
            transform: translateY(-1px);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-group select {
            cursor: pointer;
        }

        .required {
            color: #ff6b6b;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 20px;
            justify-content: flex-end;
            padding: 30px 0;
        }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            min-width: 140px;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #f8f9fa;
            color: #6c757d;
            border: 2px solid #e9ecef;
        }

        .btn-secondary:hover {
            background: #e9ecef;
            transform: translateY(-2px);
            color: #495057;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideInUp {
            from {
                transform: translateY(30px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .main-container>* {
            animation: slideInUp 0.6s ease forwards;
        }

        .sidebar {
            animation-delay: 0.1s;
        }

        .main-content {
            animation-delay: 0.2s;
        }

        .form-section {
            animation: slideInUp 0.6s ease forwards;
            animation-delay: 0.3s;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .main-container {
                flex-direction: column;
                padding: 0 15px;
                gap: 20px;
            }

            .sidebar {
                width: 100%;
                order: 2;
            }

            .main-content {
                order: 1;
            }

            .form-row {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .search-box input {
                width: 200px;
            }

            .nav-menu {
                display: none;
            }

            .content-header,
            .add-address-form {
                padding: 30px 25px;
            }

            .form-section {
                padding: 30px 25px;
            }

            .page-title {
                font-size: 24px;
            }

            .form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .btn {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .header-content {
                padding: 0 15px;
            }

            .search-box {
                display: none;
            }

            .content-header,
            .add-address-form {
                padding: 20px;
            }

            .form-section {
                padding: 25px 20px;
            }

            .profile-section {
                padding: 30px 20px;
            }

            .page-title {
                font-size: 20px;
            }

            .section-title {
                font-size: 18px;
            }
        }

        .error-msg {
            color: red;
            font-size: 0.85rem;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>

<body>
    
<%- include("../partials/user/header") %>

    <div class="main-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="profile-section">
                <div class="profile-info">
                    <div class="profile-avatar"></div>
                    <div class="profile-name"><%= address.fullName %></div>
                </div>
            </div>
            <nav>
                <ul class="menu-list">
                    <li class="menu-item">
                        <a href="/userProfile">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-user"></i></div>
                                <span>My Profile</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item active">
                        <a href="/addAddress">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-map-marker-alt"></i></div>
                                <span>My Address</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-shopping-bag"></i></div>
                                <span>My Orders</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="/wish-list">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-heart"></i></div>
                                <span>My Wishlist</span>
                            </div>
                            <span class="wishlist-badge">4</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-wallet"></i></div>
                                <span>My Wallet</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="/coupon">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-ticket-alt"></i></div>
                                <span>My Coupons</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-lock"></i></div>
                                <span>Change Password</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="/logout">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-sign-out-alt"></i></div>
                                <span>Logout</span>
                            </div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="#">
                            <div class="menu-left">
                                <div class="menu-icon"><i class="fas fa-gift"></i></div>
                                <span>Referral Code</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="breadcrumb">
                <a href="/userProfile">Profile</a> > <a href="/address">Delivery Address</a> > Edit Address
            </div>

            <div class="content-header">
                <h1 class="page-title">Edit Address</h1>
            </div>

            <div class="add-address-form">
                <form id="editAddressForm" novalidate>
                    <div class="form-group">
                        <label>Full Name <span class="required">*</span></label>
                        <input type="text" id="fullName" name="fullName" value="<%= address.fullName %>" >
                        <small class="error-msg" id="error-fullName"></small>
                    </div>

                    <div class="form-group">
                        <label>Phone Number <span class="required">*</span></label>
                        <input type="tel" id="phone" name="phone" value="<%= address.phone %>">
                        <small class="error-msg" id="error-phone"></small>
                    </div>

                    <div class="form-group">
                        <label>Address Type <span class="required" >*</span></label>
                        <select id="addressType" name="addressType" >
                            <option value="home">
                                <%= address.addressType === 'home' ? 'selected' : '' %>
                                Home
                            </option>
                            <option value="work">
                                <%= address.addressType === 'work' ? 'selected' : '' %>
                                Work</option>
                            <option value="other">Other</option>
                        </select>
                        <small class="error-msg" id="error-addressType"></small>
                    </div>

                    <div class="form-group">
                        <label>Address <span class="required">*</span></label>
                        <textarea id="address" name="address" value="<%= address.address %>" ><%= address.address %></textarea>
                        <small class="error-msg" id="error-address"></small>
                    </div>

                    <div class="form-group">
                        <label>District <span class="required">*</span></label>
                        <input type="text" id="district" name="district" value="<%= address.district %>" >
                        <small class="error-msg" id="error-district"></small>
                    </div>

                    <div class="form-group">
                        <label>State <span class="required">*</span></label>
                        <input type="text" id="state" name="state" value="<%= address.state %>" >
                        <small class="error-msg" id="error-state"></small>
                    </div>

                    <div class="form-group">
                        <label>City <span class="required">*</span></label>
                        <input type="text" id="city" name="city"  value="<%= address.city %>" >
                        <small class="error-msg" id="error-city"></small>
                    </div>

                    <div class="form-group">
                        <label>Pin Code <span class="required">*</span></label>
                        <input type="text" id="pinCode" name="pinCode" value="<%= address.pinCode %>" >
                        <small class="error-msg" id="error-pinCode"></small>
                    </div>

                    <div class="form-group">
                        <label>Landmark (optional)</label>
                        <input type="text" id="landmark" name="landmark" value="<%= address.landmark %>" >
                    </div>

                    <button type="submit" class="btn btn-primary">Update Address</button>
                </form>
            </div>
        </main>
    </div>
    <%-include("../partials/user/footer") %>
  <script>
    const addressId = "<%= address._id %>";

    document.getElementById('editAddressForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const fields = [
            "fullName", "phone", "addressType",
            "address", "district", "state", "city", "pinCode", "landmark"
        ];

        const values = {};
        let hasError = false;

        
        fields.forEach(id => {
            const errorElem = document.getElementById(`error-${id}`);
            if(errorElem) errorElem.textContent = "";
            const inputElem = document.getElementById(id);
            if(inputElem) inputElem.style.borderColor = "";
        });

        
        const regex = {
            fullName: /^[a-zA-Z\s]{3,}$/,
            phone: /^[6-9]\d{9}$/,
            pinCode: /^\d{6}$/
        };

        
        fields.forEach(field => {
            const input = document.getElementById(field);
            if(!input) return; 

            const value = input.value.trim();
            values[field] = value;

            if (!value) {
                document.getElementById(`error-${field}`).textContent = "This field is required.";
                input.style.borderColor = "red";
                hasError = true;
            } else if (regex[field] && !regex[field].test(value)) {
                document.getElementById(`error-${field}`).textContent = `Invalid ${field.replace(/([A-Z])/g, ' $1')}`;
                input.style.borderColor = "red";
                hasError = true;
            }
        });

        if (hasError) return;
         
        try {
            
            const res = await fetch(`/edit-address/${addressId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(values)  
            });
            

            const result = await res.json();
           
            if (result.success) {
                showToast("Address updated successfully.");
                setTimeout(() => {
                    window.location.href = "/address";
                }, 2000);
            } else {
                showToast(result.message || "Something went wrong.");
            }
        } catch (err) {
            console.error(err);
            showToast("Server error. Try again later.");
        }
    });

    
    function showToast(message) {
        const toast = document.createElement('div');
        toast.textContent = message;
        toast.style.position = 'fixed';
        toast.style.bottom = '20px';
        toast.style.right = '20px';
        toast.style.background = '#333';
        toast.style.color = 'white';
        toast.style.padding = '10px 20px';
        toast.style.borderRadius = '5px';
        toast.style.zIndex = 1000;
        document.body.appendChild(toast);
        setTimeout(() => document.body.removeChild(toast), 3000);
    }
</script>

</body>

</html>