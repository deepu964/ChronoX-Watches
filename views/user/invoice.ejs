<!DOCTYPE html>
<html>
<head>
  <title>Invoice</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body { 
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
      color: #333;
    }
    
    .invoice-container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
    }
    
    .invoice-header {
      background: #ffffff;
      color: #333;
      padding: 30px;
      text-align: center;
      border-bottom: 3px solid #333;
    }
    
    .invoice-title {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
      letter-spacing: 2px;
    }
    
    .invoice-number {
      font-size: 16px;
      color: #666;
    }
    
    .invoice-body {
      padding: 30px;
    }
    
    .company-customer-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
      gap: 30px;
    }
    
    .company-details, .customer-details {
      flex: 1;
    }
    
    .company-details h3, .customer-details h3 {
      color: #333;
      font-size: 16px;
      margin-bottom: 15px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 5px;
      text-transform: uppercase;
      font-weight: 600;
    }
    
    .company-details p, .customer-details p {
      margin-bottom: 6px;
      line-height: 1.4;
      color: #555;
    }
    
    .payment-method {
      background: #f9f9f9;
      padding: 12px;
      border-radius: 4px;
      margin-top: 15px;
      border: 1px solid #ddd;
    }
    
    .payment-method strong {
      color: #333;
    }
    
    .invoice-table {
      width: 100%;
      border-collapse: collapse;
      margin: 30px 0;
      background: white;
      border: 1px solid #ddd;
    }
    
    .invoice-table th {
      background: #f8f9fa;
      color: #333;
      padding: 12px 10px;
      text-align: left;
      font-weight: 600;
      font-size: 14px;
      border-bottom: 2px solid #ddd;
      border-right: 1px solid #ddd;
    }
    
    .invoice-table th:last-child {
      border-right: none;
    }
    
    .invoice-table td {
      padding: 12px 10px;
      border-bottom: 1px solid #eee;
      border-right: 1px solid #eee;
    }
    
    .invoice-table td:last-child {
      border-right: none;
    }
    
    .invoice-table tbody tr:last-child td {
      border-bottom: 1px solid #ddd;
    }
    
    .text-right {
      text-align: right;
    }
    
    .text-center {
      text-align: center;
    }
    
    .summary {
      background: #f9f9f9;
      padding: 20px;
      border: 1px solid #ddd;
      margin: 30px 0;
    }
    
    .summary h3 {
      color: #333;
      margin-bottom: 20px;
      font-size: 18px;
      text-transform: uppercase;
      font-weight: 600;
    }
    
    .summary-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      padding: 6px 0;
      color: #555;
    }
    
    .summary-row.total {
      border-top: 2px solid #333;
      margin-top: 15px;
      padding-top: 15px;
      font-weight: bold;
      font-size: 18px;
      color: #333;
    }
    
    .download-section {
      text-align: center;
      padding: 25px;
      background: #f9f9f9;
      border-top: 1px solid #ddd;
    }
    
    .download-btn {
      background: #333;
      color: white;
      border: none;
      padding: 12px 25px;
      font-size: 14px;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 1px;
    }
    
    .download-btn:hover {
      background: #555;
      transform: translateY(-1px);
    }
    
    .download-btn:active {
      transform: translateY(0);
    }
    
    @media (max-width: 768px) {
      .company-customer-row {
        flex-direction: column;
        gap: 20px;
      }
      
      .invoice-table {
        font-size: 12px;
      }
      
      .invoice-table th,
      .invoice-table td {
        padding: 8px 5px;
      }
    }
    
    @media print {
      body {
        background: white;
        padding: 0;
      }
      
      .invoice-container {
        box-shadow: none;
        border-radius: 0;
      }
      
      .download-section {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="invoice-container">
    <!-- Header -->
    <div class="invoice-header">
      <div class="invoice-title">INVOICE</div>
      <div class="invoice-number">Order #<%= order._id %></div>
    </div>
    
    <!-- Invoice Body -->
    <div class="invoice-body">
      <!-- Company and Customer Details Row -->
      <div class="company-customer-row">
        <!-- Company Details (Left) -->
        <div class="company-details">
          <h3>From</h3>
          <p><strong>ChronoX</strong></p>
          <p>Church Street</p>
          <p>Bangaolre, Karnataka 989096</p>
          <p>Phone: +91-9876543210</p>
          <p>Email: info@chronox.store</p>
        </div>
        
        <!-- Customer Details (Right) -->
        <div class="customer-details">
          <h3>Bill To</h3>
          <p><strong><%= order.user.name %></strong></p>
          <p>Email: <%= order.user.email %></p>
          <p>Date: <%= order.createdAt.toDateString() %></p>
          
          <!-- Payment Method -->
          <div class="payment-method">
            <strong>Payment Method:</strong> <%= order.paymentMethod %>
          </div>
        </div>
      </div>
      
      <!-- Invoice Table -->
      <table class="invoice-table">
        <thead>
          <tr>
            <th>Customer Name</th>
            <th>Product Name</th>
            <th class="text-center">Quantity</th>
            <th class="text-right">Price</th>
            <th class="text-right">Discount</th>
            <!-- <th>Coupon</th> -->
            <th>Payment Method</th>
            <th class="text-right">Total</th>
          </tr>
        </thead>
        <tbody>
          <% order.items.forEach(item => { %>
          <tr>
            <td><%= order.user.fullname %></td>
            <td><%= item.product.name %></td>
            <td class="text-center"><%= item.quantity %></td>
            <td class="text-right">â‚¹<%= item.price %></td>
            <td class="text-right">
              â‚¹<%= item.product?.variants?.[item.variantIndex]?.regularPrice ?? 'N/A' %>
            </td>
            <!-- <td>-</td> -->
            <td><%= order.paymentMethod %></td>
            <td class="text-right">â‚¹<%= (item.price * item.quantity) %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      
      <!-- Summary -->
      <div class="summary">
        <h3>Order Summary</h3>
        <div class="summary-row">
          <span>Subtotal:</span>
          <span>â‚¹<%= order.totalAmount %></span>
        </div>

        <div class="summary-row total">
          <span>Total Amount:</span>
          <span>â‚¹<%= Math.round(order.totalAmount + 50) %></span>
        </div>
      </div>
    </div>
    
    <!-- Download Section -->
    <div class="download-section">
      <button class="download-btn" onclick="downloadInvoice()">
        ðŸ“„ Download Invoice
      </button>
    </div>
  </div>
  
  <script>
    function downloadInvoice() {
      // Hide the download button for printing
      const downloadSection = document.querySelector('.download-section');
      downloadSection.style.display = 'none';
      
      // Print the page (this will open print dialog)
      window.print();
      
      // Show the download button again after printing
      setTimeout(() => {
        downloadSection.style.display = 'block';
      }, 1000);
    }
  </script>
</body>
</html>