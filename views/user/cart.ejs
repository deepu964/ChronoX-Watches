<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .cart-container {
        
            max-width: 800px;
            margin-top: 30px;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 30px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .cart-container:hover {
            transform: translateY(-5px);
        }

        .cart-header {
            background: linear-gradient(135deg,  #667eea, #764ba2 );
            color: white;
            padding: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .cart-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            transform: rotate(45deg);
            animation: shimmer 3s infinite;
        }

        @keyframes shimmer {
            0%, 100% { transform: rotate(45deg) translateX(-100%); }
            50% { transform: rotate(45deg) translateX(100%); }
        }

        .cart-title {
            font-size: 2rem;
            font-weight: 700;
            letter-spacing: 1px;
            z-index: 1;
        }

        .empty-cart-btn {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            padding: 12px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            z-index: 1;
        }

        .empty-cart-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            transform: scale(1.05);
        }

        .cart-items {
            padding: 0;
        }

        .cart-item {
            display: flex;
            align-items: center;
            padding: 30px;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .cart-item::before {
            content: '';
            position: absolute;
            left: -100%;
            top: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(103, 126, 234, 0.05), transparent);
            transition: left 0.5s ease;
        }

        .cart-item:hover {
            background: #f9f9f9;
            transform: translateX(10px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .cart-item:hover::before {
            left: 100%;
        }

        .item-image {
            width: 80px;
            height: 80px;
            border-radius: 15px;
            overflow: hidden;
            margin-right: 20px;
            position: relative;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;
        }

        .item-image:hover {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .item-image:hover img {
            transform: scale(1.2);
        }

        .item-details {
            flex: 1;
            margin-right: 20px;
        }

        .item-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            transition: color 0.3s ease;
        }

        .cart-item:hover .item-name {
            color: #000000;
        }

        .item-price {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .current-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: #000000;
        }

        .original-price {
            font-size: 0.9rem;
            color: #999;
            text-decoration: line-through;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-right: 20px;
        }

        .quantity-btn {
            width: 40px;
            height: 40px;
            border: 2px solid #000000;
            background: white;
            color: #000000;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            font-weight: bold;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .quantity-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: #000000;
            border-radius: 50%;
            transition: all 0.3s ease;
            transform: translate(-50%, -50%);
        }

        .quantity-btn:hover::before {
            width: 100%;
            height: 100%;
        }

        .quantity-btn:hover {
            color: white;
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
        }

        .quantity-display {
            font-size: 1.2rem;
            font-weight: 600;
            min-width: 30px;
            text-align: center;
            padding: 8px 16px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 20px;
            border: 2px solid #dee2e6;
        }

        .remove-btn {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .remove-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transition: all 0.3s ease;
            transform: translate(-50%, -50%);
        }

        .remove-btn:hover::before {
            width: 300%;
            height: 300%;
        }

        .remove-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4);
        }

        .cart-summary {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 30px;
            border-top: 3px solid #000000;
        }

        .promo-section {
            margin-bottom: 25px;
            text-align: center;
        }

        .promo-link {
            color: #000000;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            position: relative;
        }

        .promo-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            width: 0;
            height: 2px;
            background: #000000;
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .promo-link:hover::after {
            width: 100%;
        }

        .promo-link:hover {
            transform: translateY(-2px);
        }

        .subtotal {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
            padding: 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .shipping-info {
            text-align: center;
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 25px;
        }

        .cart-actions {
            display: flex;
            gap: 15px;
        }

        .cart-actions button {
            flex: 1;
            padding: 18px;
            border: none;
            border-radius: 15px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .checkout-btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .checkout-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transition: all 0.3s ease;
            transform: translate(-50%, -50%);
        }

        .checkout-btn:hover::before {
            width: 300%;
            height: 300%;
        }

        .checkout-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

        .continue-btn {
            background: white;
            color: #000000;
            border: 2px solid #000000;
        }

        .continue-btn:hover {
            background: #000000;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .cart-container {
                margin: 0;
                border-radius: 15px;
            }

            .cart-header {
                padding: 20px;
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .cart-title {
                font-size: 1.5rem;
            }

            .cart-item {
                flex-direction: column;
                padding: 20px;
                text-align: center;
                gap: 15px;
            }

            .item-image {
                margin-right: 0;
                margin-bottom: 10px;
            }

            .item-details {
                margin-right: 0;
                margin-bottom: 15px;
            }

            .quantity-controls {
                margin-right: 0;
                margin-bottom: 15px;
            }

            .cart-actions {
                flex-direction: column;
            }

            .cart-actions button {
                padding: 15px;
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .cart-item {
                padding: 15px;
            }

            .item-image {
                width: 60px;
                height: 60px;
            }

            .cart-title {
                font-size: 1.3rem;
            }

            .quantity-btn {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }

            .quantity-display {
                font-size: 1rem;
                padding: 6px 12px;
            }
        }

        /* Animation for item removal */
        .cart-item.removing {
            animation: slideOut 0.5s ease-out forwards;
        }

        @keyframes slideOut {
            0% {
                transform: translateX(0);
                opacity: 1;
                max-height: 140px;
            }
            50% {
                transform: translateX(-100%);
                opacity: 0;
            }
            100% {
                transform: translateX(-100%);
                opacity: 0;
                max-height: 0;
                padding: 0;
                margin: 0;
            }
        }

        /* Loading animation */
        .loading {
            position: relative;
            pointer-events: none;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #000000;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            transform: translate(-50%, -50%);
        }

        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }
    </style>
</head>

<body>
<%-include("../partials/user/header") %>
    <div class="cart-container">
        <div class="cart-header">
            <h1 class="cart-title">CART</h1>
            <button class="empty-cart-btn" onclick="emptyCart()">Empty My Cart</button>
        </div>

        <div class="cart-items" id="cartItems">
            <% items.forEach((item, index) => { %>
                <div class="cart-item" data-id="<%= item.product._id %>">
                <div class="product-image">
                    <% if (item.images && item.images.length > 0 && item.images[0].public_id) { %>
                        <img src="https://res.cloudinary.com/<%= cloudName %>/image/upload/<%= item.product.images[0].public_id %>.jpg" alt="<%= item.product.name %>" onerror="this.src='/images/placeholder.jpg'">

                    <% } else { %>
                        <img src="/images/placeholder.jpg" alt="No image available">
                    <% } %>
                    </div>
                    <div class="item-details">
                        <div class="item-name"><%= item.product.name %></div>
                        <div class="item-price">
                            <% 
                                const price = item.product.variants[0].salePrice || item.product.variants[0].regularPrice;
                                const originalPrice = item.product.variants[0].regularPrice;
                            %>
                            <span class="current-price">₹<%= price.toLocaleString() %></span>
                            <% if (price !== originalPrice) { %>
                                <span class="original-price">₹<%= originalPrice.toLocaleString() %></span>
                            <% } %>
                        </div>
                    </div>
                    <div class="quantity-controls">
                        <button class="quantity-btn" onclick="updateCart('<%= item.product._id %>', 'decrease')">−</button>
                        <div class="quantity-display" id="qty-<%= item.product._id %>"><%= item.quantity %></div>
                        <button class="quantity-btn" onclick="updateCart('<%= item.product._id %>', 'increase')">+</button>
                    </div>
                    <button class="remove-btn" onclick="removeItem('<%= item.product._id %>')">Remove</button>
                </div>
            <% }) %>
        </div>

        <div class="cart-summary">
            <div class="promo-section">
                <a href="#" class="promo-link">Save 10%</a>
            </div>

            <div class="subtotal">
                <span>SUBTOTAL</span>
                <div>
                    <span id="subtotalAmount">INR <%= total.toLocaleString() %></span>
                </div>
            </div>

            <div class="shipping-info">
                Shipping, taxes, and discount codes calculated at checkout.
            </div>

            <div class="cart-actions">
                <a href="/check-out"><button class="checkout-btn">Proceed to checkout</button></a>
                <a href="/shop"><button class="continue-btn">Continue Shopping</button></a>
            </div>
        </div>
    </div>
    <%-include("../partials/user/footer") %>

    <script>
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => {
                toast.classList.remove('show');
                toast.remove();
            }, 3000);
        }

        async function updateCart(productId, action) {
            try {
                const res = await fetch(`/cart/update`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId, action })
                });
                const data = await res.json();
                if (data.success) {
                    if (data.quantity === 0) {
                        document.querySelector(`[data-id="${productId}"]`).remove();
                    } else {
                        document.getElementById(`qty-${productId}`).innerText = data.quantity;
                    }
                    showToast(data.message || 'Cart updated');
                    setTimeout(() => location.reload(), 500);
                } else {
                    showToast(data.message || 'Failed to update cart','error');
                }
            } catch (err) {
                console.error(err);
                showToast('Something went wrong');
            }
        }

        async function removeItem(productId) {
            try {
                const res = await fetch(`/cart/remove/${productId}`, {
                    method: 'POST'
                });
                const data = await res.json();
                if (data.success) {
                    document.querySelector(`[data-id="${productId}"]`).remove();
                    showToast('Product removed from cart');
                    setTimeout(() => location.reload(), 500);
                } else {
                    showToast(data.message || 'Failed to remove item');
                }
            } catch (err) {
                console.error(err);
                showToast('Something went wrong');
            }
        }

        function emptyCart() {
            if (confirm('Are you sure you want to empty your cart?')) {
                fetch('/cart/empty', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        showToast('Cart emptied');
                        setTimeout(() => location.reload(), 500);
                    } else {
                        showToast('Failed to empty cart');
                    }
                });
            }
        }

        const style = document.createElement('style');
        style.textContent = `
            .toast {
                visibility: hidden;
                min-width: 250px;
                margin-left: -125px;
                background-color: #333;
                color: #fff;
                text-align: center;
                border-radius: 2px;
                padding: 16px;
                position: fixed;
                z-index: 1;
                left: 50%;
                bottom: 30px;
                font-size: 17px;
                opacity: 0;
                transition: opacity 0.5s, bottom 0.5s;
            }

            .toast.show {
                visibility: visible;
                opacity: 1;
                bottom: 50px;
            }
        `;
        document.head.appendChild(style);
    </script>
</body>

</html>