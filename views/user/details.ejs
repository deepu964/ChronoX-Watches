            color: #070505;
            position: relative;
            padding-left: 1.5rem;
            font-size:medium;
            transition: color 0.3s ease;
        }

        .product-features li:hover {
            color: #ff6b35;
        }

        .product-features li::before {
            content: '✓';
            color: #28a745;
            font-weight: bold;
            position: absolute;
            left: 0;
        }

        .quantity-section {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .quantity-label {
            font-weight: 600;
            color: #333;
        }

        .quantity-controls {
