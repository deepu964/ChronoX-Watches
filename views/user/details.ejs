            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .thumbnail:hover {
            border-color: #ff6b35;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 107, 53, 0.2);
        }

        .thumbnail.active {
            border-color: #ff6b35;
            background: rgba(255, 107, 53, 0.1);
            
        }
        .thumbnail img{
            width: 100%;
            border-radius: 5px;
        }
        /* Right Side - Product Info */
        .product-info {
            padding: 2rem;
            display: flex;
            flex-direction: column;
        }

        .product-title {
            font-size: 2rem;
            color: #333;
            margin-bottom: 0.5rem;
            font-weight: 700;
        }

        .product-price {
            font-size: 1.5rem;
            color: #ed3832;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .rating {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .stars {
            color: #ffd700;
            font-size: 1.2rem;
        }

        .rating-text {
            color: #666;
            font-size: 0.9rem;
        }

        .product-features {
            list-style: none;
            margin-bottom: 2rem;
        }

        .product-features li {
