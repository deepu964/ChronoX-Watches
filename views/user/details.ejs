    <script>
        
       const maxStock = '<%= product.variants[0].quantity %>'; 

        function increaseQty() {
            const input = document.getElementById('quantity');
            let current = parseInt(input.value);
            if (current < maxStock) {
                input.value = current + 1;
            }
        }

        function decreaseQty() {
            const input = document.getElementById('quantity');
            let current = parseInt(input.value);
            if (current > 1) {
                input.value = current - 1;
            }
        }
       
  function addToCart(productId) {
        const quantity = document.getElementById('quantity').value || 1;
        const btn = document.querySelector('.add-to-cart');

        btn.innerHTML = 'Adding to Cart...';
        btn.disabled = true;

        
        fetch('/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, quantity })
        })
        .then(res => res.json())
        .then(data => {
            if (data.message) {
                btn.innerHTML = 'Added to Cart ✓';
                btn.style.background = 'linear-gradient(135deg, #28a745, #20c997)';
            } else {
                btn.innerHTML = 'Failed to Add';
            }

            setTimeout(() => {
                btn.innerHTML = 'Add to Cart';
                btn.disabled = false;
                btn.style.background = 'linear-gradient(135deg, #ff6b35, #ff8c42)';
            }, 2000);
        })
        .catch(err => {
            console.error(err);
            btn.innerHTML = 'Error';
            setTimeout(() => {
                btn.innerHTML = 'Add to Cart';
                btn.disabled = false;
            }, 2000);
        });
    }
        
        document.querySelectorAll('.thumbnail').forEach((thumb, index) => {
            thumb.addEventListener('click', () => {
                
                document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
                
                
                thumb.classList.add('active');
                const newImageSrc = thumb.getAttribute('data-img');
                document.getElementById('mainImage').setAttribute('src', newImageSrc);  
                
                
                console.log(`Switched to image ${index + 1}`);
            });
        });

            const mainImage = document.getElementById('mainImage');
            const mainImageContainer = document.querySelector('.main-image');

            mainImageContainer.addEventListener('mousemove', function (e) {
                const rect = mainImageContainer.getBoundingClientRect();
                const x = ((e.clientX - rect.left) / rect.width) * 100;
                const y = ((e.clientY - rect.top) / rect.height) * 100;

                mainImage.style.transform = 'scale(2)';
                mainImage.style.transformOrigin = `${x}% ${y}%`;
            });

            mainImageContainer.addEventListener('mouseleave', function () {
                mainImage.style.transform = 'scale(1)';
                mainImage.style.transformOrigin = 'center center';
            });

        
        document.querySelector('.search-box').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const searchTerm = e.target.value;
                window.location.href = `/search?q=${encodeURIComponent(searchTerm)}`;
            }
        });

        
        document.querySelector('.cart-icon').addEventListener('click', () => {
            window.location.href = '/cart';
        });

        
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        
        if (window.innerWidth <= 768) {
            document.querySelector('.main-image').addEventListener('click', () => {
               
                console.log('Open image modal');
            });
        }

             document.getElementById('writeReviewBtn').addEventListener('click', () => {
            document.getElementById('reviewForm').style.display = 'block';
            });

            document.getElementById('reviewForm').addEventListener('submit', async (e) => {
                e.preventDefault();

                const rating = document.getElementById('rating').value;
                const comment = document.getElementById('comment').value;
                const productId = '<%= product._id %>';

                const response = await fetch(`/productdetails/review/${productId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ rating, comment })
                });

                if (response.ok) {
                    showToast('Review submitted!');
                    setTimeout(()=>{
                         window.location.reload();
                    },2000);
                   
                } else {
                    showToast('Error submitting review');
                }
            });

    </script>
</body>
