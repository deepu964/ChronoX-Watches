<script>
document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('addAddressForm');

    // Regex
    const nameRegex = /^[A-Za-z\s]+$/;
    const phoneRegex = /^[6-9]\d{9}$/;
    const pinRegex = /^\d{6}$/;
    

    form.addEventListener('submit', function (e) {
        e.preventDefault();
        let isValid = true;

        // Clear old errors
        document.querySelectorAll('.error-text').forEach(el => el.textContent = '');

        // Get all field values
        const fullName = document.getElementById('fullName');
        const phone = document.getElementById('phone');
        const pinCode = document.getElementById('pinCode');
        const city = document.getElementById('city');
        const state = document.getElementById('state');
        const district = document.getElementById('district');
        const address = document.getElementById('address');
        const landmark = document.getElementById('landmark');

        const fullNameVal = fullName.value.trim();        const phoneVal = phone.value.trim();
        const pinVal = pinCode.value.trim();
        const cityVal = city.value.trim();
        const stateVal = state.value.trim();
        const districtVal = district.value.trim();
        const addressVal = address.value.trim();
        const landmarkVal = landmark.value.trim();

        // Full Name
        if (!fullNameVal) {
            showError(fullName, 'Full Name is required');
            isValid = false;
        }else if (fullNameVal.length < 3) {
            showError(fullName, 'Full Name must be at least 3 characters');
            isValid = false;
        }else if (!nameRegex.test(fullNameVal)) {
            showError(fullName, 'Only letters and spaces allowed');
            isValid = false;
        } else if (fullNameVal[0] !== fullNameVal[0].toUpperCase()) {
            showError(fullName, 'First letter must be capital');
            isValid = false;
        }

       

        // Phone
        if (!phoneVal) {
            showError(phone, 'Mobile number is required');
            isValid = false;
        } else if (!phoneRegex.test(phoneVal)) {
            showError(phone, '10 digits & starts with 6-9');
            isValid = false;
        }

        // Pincode
        if (!pinVal) {
            showError(pinCode, 'Pincode is required');
            isValid = false;
        } else if (!pinRegex.test(pinVal)) {
            showError(pinCode, 'Pincode must be 6 digits');
            isValid = false;
        }

        // City
        if (!cityVal) {
            showError(city, 'City is required');
            isValid = false;
        } else if (!nameRegex.test(cityVal)) {
            showError(city, 'Only letters and spaces allowed');
            isValid = false;
        } else if (cityVal[0] !== cityVal[0].toUpperCase()) {
            showError(city, 'First letter must be capital');
            isValid = false;
        }

        // State
        if (!stateVal) {
            showError(state, 'State is required');
            isValid = false;
        } else if (!nameRegex.test(stateVal)) {
            showError(state, 'Only letters and spaces allowed');
            isValid = false;
        } else if (stateVal[0] !== stateVal[0].toUpperCase()) {
            showError(state, 'First letter must be capital');
            isValid = false;
        }

        // District
        if (!districtVal) {
            showError(district, 'District is required');
            isValid = false;
        } else if (!nameRegex.test(districtVal)) {
            showError(district, 'Only letters and spaces allowed');
            isValid = false;
        } else if (districtVal[0] !== districtVal[0].toUpperCase()) {
            showError(district, 'First letter must be capital');
            isValid = false;
        }

        // Address
        if (!addressVal) {
            showError(address, 'Address is required');
            isValid = false;
        } else if (addressVal.length < 5) {
            showError(address, 'Min 5 characters required');
            isValid = false;
        } else if (addressVal[0] !== addressVal[0].toUpperCase()) {
            showError(address, 'First letter must be capital');
            isValid = false;
        }

        // Landmark
        if (!landmarkVal) {
            showError(landmark, 'Landmark is required');
            isValid = false;
        } else if (landmarkVal.length < 5) {
            showError(landmark, 'Min 5 characters required');
            isValid = false;
        } else if (landmarkVal[0] !== landmarkVal[0].toUpperCase()) {
            showError(landmark, 'First letter must be capital');
            isValid = false;
        }

         
        

        if (isValid) {
            showToast('Address added successfully!');
            setTimeout(() => {
                form.submit();
            }, 2000);
        }
           
    });



    const pinCodeInput = document.getElementById('pinCode');
    pinCodeInput.addEventListener('input', () => {
        pinCodeInput.value = pinCodeInput.value.replace(/\D/g, '').substring(0, 6);
    });

    // Show error
    function showError(inputEl, message) {
        const errorEl = document.getElementById('error-' + inputEl.id);
        if (errorEl) {
            errorEl.textContent = message;
            errorEl.style.color = 'red';
        }
    }

    // Toast message
    function showToast(message) {
        let toast = document.getElementById('toast');
        if (!toast) {
            toast = document.createElement('div');
            toast.id = 'toast';
            toast.style.position = 'fixed';
            toast.style.bottom = '20px';
            toast.style.right = '20px';
            toast.style.background = '#28a745';
            toast.style.color = '#fff';
            toast.style.padding = '10px 20px';
            toast.style.borderRadius = '5px';
            toast.style.boxShadow = '0 0 10px rgba(0,0,0,0.2)';
            document.body.appendChild(toast);
        }
        toast.innerText = message;
        toast.style.display = 'block';
        setTimeout(() => {
            toast.style.display = 'none';
        }, 3000);
    }
});
