<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Return Request - ChronoX</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .page-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .page-subtitle {
            color: #666;
            font-size: 16px;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        .order-info {
            background: rgba(102, 126, 234, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .order-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .detail-label {
            font-weight: 600;
            color: #333;
        }

        .detail-value {
            color: #667eea;
            font-weight: 700;
        }

        .items-section {
            margin-bottom: 30px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: #333;
            margin-bottom: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: #667eea;
        }

        .bulk-actions {
            display: flex;
            gap: 10px;
        }

        .bulk-btn {
            padding: 8px 16px;
            background: transparent;
            color: #667eea;
            border: 2px solid #667eea;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .bulk-btn:hover {
            background: #667eea;
            color: white;
        }

        .item-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .item-card.selected {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        .item-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .item-checkbox {
            width: 20px;
            height: 20px;
            accent-color: #667eea;
        }

        .item-image {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .item-details {
            flex: 1;
        }

        .item-name {
            font-size: 16px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .item-info {
            color: #666;
            font-size: 14px;
        }

        .item-price {
            font-size: 18px;
            font-weight: 700;
            color: #667eea;
        }

        .return-options {
            display: none;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 15px;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }

        .return-options.show {
            display: grid;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 5px;
            color: #333;
        }

        .form-input,
        .form-select {
            padding: 10px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

        .form-input:focus,
        .form-select:focus {
            outline: none;
            border-color: #667eea;
        }

        .reason-section {
            margin-bottom: 30px;
        }

        .reason-textarea {
            width: 100%;
            min-height: 100px;
            padding: 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 14px;
            font-family: inherit;
            resize: vertical;
            transition: border-color 0.3s ease;
        }

        .reason-textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        .submit-section {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
        }

        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            margin: 0 10px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: transparent;
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #667eea;
            color: white;
        }

        .total-refund {
            background: rgba(76, 175, 80, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
        }

        .refund-amount {
            font-size: 24px;
            font-weight: 700;
            color: #4CAF50;
        }

        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }

            .return-options {
                grid-template-columns: 1fr;
            }

            .item-header {
                flex-direction: column;
                text-align: center;
            }

            .order-details {
                grid-template-columns: 1fr;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .bulk-actions {
                width: 100%;
                justify-content: center;
            }

            .bulk-btn {
                flex: 1;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%- include("../partials/user/header") %>
    
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Return Request</h1>
            <p class="page-subtitle">Request a return for your order items</p>
        </div>

        <!-- Form Container -->
        <div class="form-container">
            <!-- Order Information -->
            <div class="order-info">
                <h3 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Order Information
                </h3>
                <div class="order-details">
                    <div class="detail-item">
                        <span class="detail-label">Order ID:</span>
                        <span class="detail-value">#<%= order._id.toString().slice(-8).toUpperCase() %></span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Order Date:</span>
                        <span class="detail-value"><%= new Date(order.createdAt).toLocaleDateString('en-IN') %></span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Total Amount:</span>
                        <span class="detail-value">₹<%= order.totalAmount.toLocaleString() %></span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Status:</span>
                        <span class="detail-value"><%= order.status %></span>
                    </div>
                </div>
            </div>

            <!-- Return Request Form -->
            <form id="returnRequestForm">
                <!-- Items Selection -->
                <div class="items-section">
                    <div class="section-header">
                        <h3 class="section-title">
                            <i class="fas fa-box"></i>
                            Select Items to Return
                        </h3>
                        <div class="bulk-actions">
                            <button type="button" class="bulk-btn" onclick="selectAllItems()">
                                <i class="fas fa-check-square"></i> Select All
                            </button>
                            <button type="button" class="bulk-btn" onclick="selectNoneItems()">
                                <i class="fas fa-square"></i> Select None
                            </button>
                        </div>
                    </div>
                    
                    <% order.items.forEach((item, index) => { %>
                        <div class="item-card" data-item-index="<%= index %>">
                            <div class="item-header">
                                <input type="checkbox" class="item-checkbox" 
                                       data-product-id="<%= item.product._id %>"
                                       data-price="<%= item.price %>"
                                       data-max-quantity="<%= item.quantity %>"
                                       onchange="toggleItemSelection(this)">
                                <div class="item-image">
                                    <% if (item.product.images && item.product.images.length > 0) { %>
                                        <img src="https://res.cloudinary.com/<%= cloudName %>/image/upload/w_80,h_80,c_fill/<%= item.product.images[0].public_id %>" 
                                             alt="<%= item.product.name %>" 
                                             onerror="this.src='/images/placeholder.jpg'">
                                    <% } else { %>
                                        <img src="/images/placeholder.jpg" alt="No image">
                                    <% } %>
                                </div>
                                <div class="item-details">
                                    <div class="item-name"><%= item.product.name %></div>
                                    <div class="item-info">
                                        Ordered Quantity: <%= item.quantity %> | 
                                        Unit Price: ₹<%= item.price.toLocaleString() %>
                                    </div>
                                </div>
                                <div class="item-price">₹<%= (item.price * item.quantity).toLocaleString() %></div>
                            </div>
                            
                            <div class="return-options" id="options-<%= index %>">
                                <div class="form-group">
                                    <label class="form-label">Return Quantity</label>
                                    <input type="number" class="form-input quantity-input" 
                                           min="1" max="<%= item.quantity %>" value="<%= item.quantity %>"
                                           onchange="updateRefundAmount()">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Reason for Return</label>
                                    <select class="form-select reason-select">
                                        <option value="">Select Reason</option>
                                        <option value="Defective Product">Defective Product</option>
                                        <option value="Wrong Item Received">Wrong Item Received</option>
                                        <option value="Size/Color Issue">Size/Color Issue</option>
                                        <option value="Product Not as Described">Product Not as Described</option>
                                        <option value="Damaged During Shipping">Damaged During Shipping</option>
                                        <option value="Changed Mind">Changed Mind</option>
                                        <option value="Quality Issues">Quality Issues</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Product Condition</label>
                                    <select class="form-select condition-select">
                                        <option value="">Select Condition</option>
                                        <option value="Unopened">Unopened</option>
                                        <option value="Opened but Unused">Opened but Unused</option>
                                        <option value="Used">Used</option>
                                        <option value="Damaged">Damaged</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- Total Refund Amount -->
                <div class="total-refund" id="totalRefundSection" style="display: none;">
                    <h4>Total Refund Amount</h4>
                    <div class="refund-amount" id="totalRefundAmount">₹0</div>
                </div>

                <!-- Return Reason -->
                <div class="reason-section">
                    <h3 class="section-title">
                        <i class="fas fa-comment"></i>
                        Additional Comments
                    </h3>
                    <textarea class="reason-textarea" id="requestReason"
                              placeholder="Please provide additional details about your return request..."
                              maxlength="500"></textarea>
                </div>

                <!-- Submit Section -->
                <div class="submit-section">
                    <a href="/my-orders" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back to Orders
                    </a>
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="fas fa-paper-plane"></i>
                        Submit Return Request
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../partials/user/footer") %>

    <script>
        let selectedItems = [];
        let totalRefund = 0;

        function toggleItemSelection(checkbox) {
            const itemCard = checkbox.closest('.item-card');
            const itemIndex = itemCard.dataset.itemIndex;
            const options = document.getElementById(`options-${itemIndex}`);
            
            if (checkbox.checked) {
                itemCard.classList.add('selected');
                options.classList.add('show');
                addToSelectedItems(checkbox);
            } else {
                itemCard.classList.remove('selected');
                options.classList.remove('show');
                removeFromSelectedItems(checkbox.dataset.productId);
            }
            
            updateRefundAmount();
        }

        function addToSelectedItems(checkbox) {
            const productId = checkbox.dataset.productId;
            const price = parseFloat(checkbox.dataset.price);
            const maxQuantity = parseInt(checkbox.dataset.maxQuantity);
            
            selectedItems.push({
                productId,
                price,
                maxQuantity,
                quantity: maxQuantity
            });
        }

        function removeFromSelectedItems(productId) {
            selectedItems = selectedItems.filter(item => item.productId !== productId);
        }

        function updateRefundAmount() {
            totalRefund = 0;

            selectedItems.forEach(item => {
                const checkbox = document.querySelector(`[data-product-id="${item.productId}"]`);
                if (checkbox && checkbox.checked) {
                    const itemCard = checkbox.closest('.item-card');
                    const quantityInput = itemCard.querySelector('.quantity-input');
                    const quantity = parseInt(quantityInput.value) || 0;

                    item.quantity = quantity;
                    totalRefund += item.price * quantity;
                }
            });

            const totalRefundSection = document.getElementById('totalRefundSection');
            const totalRefundAmount = document.getElementById('totalRefundAmount');

            if (totalRefund > 0) {
                totalRefundSection.style.display = 'block';
                totalRefundAmount.textContent = `₹${totalRefund.toLocaleString()}`;
            } else {
                totalRefundSection.style.display = 'none';
            }
        }

        // Select all items for return
        function selectAllItems() {
            const checkboxes = document.querySelectorAll('.item-checkbox');
            checkboxes.forEach(checkbox => {
                if (!checkbox.checked) {
                    checkbox.checked = true;
                    toggleItemSelection(checkbox);
                }
            });
        }

        // Deselect all items
        function selectNoneItems() {
            const checkboxes = document.querySelectorAll('.item-checkbox');
            checkboxes.forEach(checkbox => {
                if (checkbox.checked) {
                    checkbox.checked = false;
                    toggleItemSelection(checkbox);
                }
            });
        }

        // Form submission
        document.getElementById('returnRequestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (selectedItems.length === 0) {
                alert('Please select at least one item to return');
                return;
            }
            
            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.innerHTML;
            
            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';
            
            try {
                // Collect form data
                const items = [];
                
                selectedItems.forEach(item => {
                    const checkbox = document.querySelector(`[data-product-id="${item.productId}"]`);
                    if (checkbox && checkbox.checked) {
                        const itemCard = checkbox.closest('.item-card');
                        const quantityInput = itemCard.querySelector('.quantity-input');
                        const reasonSelect = itemCard.querySelector('.reason-select');
                        const conditionSelect = itemCard.querySelector('.condition-select');
                        
                        if (!reasonSelect.value || !conditionSelect.value) {
                            throw new Error('Please fill all required fields for selected items');
                        }
                        
                        items.push({
                            productId: item.productId,
                            quantity: quantityInput.value,
                            reason: reasonSelect.value,
                            condition: conditionSelect.value
                        });
                    }
                });
                
                const requestReason = document.getElementById('requestReason').value.trim();
                if (!requestReason) {
                    throw new Error('Please provide additional comments');
                }
                
                // Use order address as pickup address
                const pickupAddress = {
                    fullName: '<%= order.address.fullName %>',
                    phone: '<%= order.address.phone %>',
                    addressLine: '<%= order.address.addressLine %>',
                    city: '<%= order.address.city %>',
                    pincode: '<%= order.address.pincode %>',
                    state: '<%= order.address.state %>'
                };
                
                const response = await fetch(`/return-request/<%= order._id %>`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        items,
                        requestReason,
                        pickupAddress: JSON.stringify(pickupAddress)
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Return request submitted successfully!');
                    window.location.href = `/return-request-details/${data.returnRequestId}`;
                } else {
                    throw new Error(data.message || 'Failed to submit return request');
                }
                
            } catch (error) {
                console.error('Error:', error);
                alert(error.message || 'Something went wrong. Please try again.');
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });
    </script>
</body>
</html>
